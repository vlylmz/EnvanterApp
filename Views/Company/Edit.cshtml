@model WebApplication1.Models.Company
@{
    ViewData["Title"] = "Firma Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-building me-1"></i>Firmalar
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                                    @Model.Name
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Düzenle</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-1 d-flex align-items-center">
                        <i class="fas fa-building-edit text-warning me-2" aria-hidden="true"></i>
                        Firma Bilgilerini Düzenle
                    </h1>
                    <p class="text-muted mb-0">
                        @Model.Name (#@Model.Id) bilgilerini güncelleyin
                    </p>
                </div>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-1" aria-hidden="true"></i> Detayları Görüntüle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1" aria-hidden="true"></i> Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <form asp-action="Edit" method="post" id="companyEditForm" novalidate>
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedDate" type="hidden" />
        <input asp-for="CreatedBy" type="hidden" />
        
        <div class="row">
            <!-- Left Column - Form Fields -->
            <div class="col-lg-8">
                <!-- Basic Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-info-circle me-2 text-primary" aria-hidden="true"></i> 
                                Temel Bilgiler
                            </h5>
                            <span class="badge bg-danger">Zorunlu Alanlar</span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-triangle me-2 fs-5"></i>
                                    <span>@TempData["Error"]</span>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name" class="form-label fw-semibold">
                                        <i class="fas fa-building text-muted me-1" aria-hidden="true"></i>
                                        Şirket Adı <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg"
                                           id="name" placeholder="Şirket adını giriniz" required>
                                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirketin resmi adını giriniz
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="form-label fw-semibold">
                                        <i class="fas fa-envelope text-muted me-1" aria-hidden="true"></i>
                                        E-posta Adresi <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control form-control-lg"
                                           id="email" placeholder="info@sirket.com" required>
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-shield-alt me-1 text-success"></i>
                                        Geçerli bir kurumsal e-posta adresi giriniz
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone" class="form-label fw-semibold">
                                        <i class="fas fa-phone text-muted me-1" aria-hidden="true"></i>
                                        Telefon Numarası
                                    </label>
                                    <input asp-for="Phone" type="tel" class="form-control form-control-lg"
                                           id="phone" placeholder="+90 212 123 45 67">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Örnek: +90 212 123 45 67 veya 0212 123 45 67
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="website" class="form-label fw-semibold">
                                        <i class="fas fa-globe text-muted me-1" aria-hidden="true"></i>
                                        Web Sitesi
                                    </label>
                                    <input asp-for="Website" type="url" class="form-control form-control-lg"
                                           id="website" placeholder="https://www.sirket.com">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirketin resmi web sitesi adresi
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="description" class="form-label fw-semibold">
                                        <i class="fas fa-comment text-muted me-1" aria-hidden="true"></i>
                                        Şirket Açıklaması
                                    </label>
                                    <textarea asp-for="Description" class="form-control form-control-lg" rows="3"
                                              id="description" placeholder="Şirket hakkında kısa açıklama..."></textarea>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirketin faaliyet alanı ve özelliklerini belirtiniz
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Address Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-map-marker-alt me-2 text-success" aria-hidden="true"></i> 
                                Adres Bilgileri
                            </h5>
                            <span class="badge bg-secondary">İsteğe Bağlı</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="address" class="form-label fw-semibold">
                                        <i class="fas fa-home text-muted me-1" aria-hidden="true"></i>
                                        Adres
                                    </label>
                                    <textarea asp-for="Address" class="form-control form-control-lg" rows="2"
                                              id="address" placeholder="Sokak, mahalle, bina no..."></textarea>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirketin tam adres bilgisini giriniz
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="city" class="form-label fw-semibold">
                                        <i class="fas fa-city text-muted me-1" aria-hidden="true"></i>
                                        Şehir
                                    </label>
                                    <input asp-for="City" class="form-control form-control-lg"
                                           id="city" placeholder="İstanbul">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="district" class="form-label fw-semibold">
                                        <i class="fas fa-map text-muted me-1" aria-hidden="true"></i>
                                        İlçe
                                    </label>
                                    <input asp-for="District" class="form-control form-control-lg"
                                           id="district" placeholder="Kadıköy">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="postalCode" class="form-label fw-semibold">
                                        <i class="fas fa-mail-bulk text-muted me-1" aria-hidden="true"></i>
                                        Posta Kodu
                                    </label>
                                    <input asp-for="PostalCode" class="form-control form-control-lg"
                                           id="postalCode" placeholder="34000">
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="country" class="form-label fw-semibold">
                                        <i class="fas fa-flag text-muted me-1" aria-hidden="true"></i>
                                        Ülke
                                    </label>
                                    <input asp-for="Country" class="form-control form-control-lg"
                                           id="country" placeholder="Türkiye">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="employeeCount" class="form-label fw-semibold">
                                        <i class="fas fa-users text-muted me-1" aria-hidden="true"></i>
                                        Çalışan Sayısı
                                    </label>
                                    <input asp-for="EmployeeCount" type="number" class="form-control form-control-lg"
                                           id="employeeCount" placeholder="50" min="0">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirkette çalışan toplam personel sayısı
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Person Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-user-tie me-2 text-info" aria-hidden="true"></i> 
                                İletişim Kişisi Bilgileri
                            </h5>
                            <span class="badge bg-secondary">İsteğe Bağlı</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="contactPerson" class="form-label fw-semibold">
                                        <i class="fas fa-user text-muted me-1" aria-hidden="true"></i>
                                        Yetkili Kişi
                                    </label>
                                    <input asp-for="ContactPerson" class="form-control form-control-lg"
                                           id="contactPerson" placeholder="Ahmet Yılmaz">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirketin yetkili temsilcisinin adı soyadı
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="contactTitle" class="form-label fw-semibold">
                                        <i class="fas fa-id-badge text-muted me-1" aria-hidden="true"></i>
                                        Unvan/Pozisyon
                                    </label>
                                    <input asp-for="ContactTitle" class="form-control form-control-lg"
                                           id="contactTitle" placeholder="Genel Müdür">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yetkili kişinin şirketteki pozisyonu
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="contactEmail" class="form-label fw-semibold">
                                        <i class="fas fa-envelope text-muted me-1" aria-hidden="true"></i>
                                        Yetkili E-posta
                                    </label>
                                    <input asp-for="ContactEmail" type="email" class="form-control form-control-lg"
                                           id="contactEmail" placeholder="ahmet@sirket.com">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yetkili kişinin direkt e-posta adresi
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="contactPhone" class="form-label fw-semibold">
                                        <i class="fas fa-phone text-muted me-1" aria-hidden="true"></i>
                                        Yetkili Telefon
                                    </label>
                                    <input asp-for="ContactPhone" type="tel" class="form-control form-control-lg"
                                           id="contactPhone" placeholder="+90 532 123 45 67">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yetkili kişinin direkt telefon numarası
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-sticky-note me-2 text-warning" aria-hidden="true"></i> 
                            Ek Bilgiler ve Notlar
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="logoUrl" class="form-label fw-semibold">
                                        <i class="fas fa-image text-muted me-1" aria-hidden="true"></i>
                                        Logo URL
                                    </label>
                                    <input asp-for="LogoUrl" type="url" class="form-control form-control-lg"
                                           id="logoUrl" placeholder="https://sirket.com/logo.png">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirket logosunun internet adresini giriniz
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="updatedBy" class="form-label fw-semibold">
                                        <i class="fas fa-user-edit text-muted me-1" aria-hidden="true"></i>
                                        Güncelleyen Kullanıcı
                                    </label>
                                    <input asp-for="UpdatedBy" class="form-control form-control-lg"
                                           id="updatedBy" placeholder="Kullanıcı adı">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bu güncellemeyi yapan kullanıcının adı
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="notes" class="form-label fw-semibold">
                                        <i class="fas fa-clipboard text-muted me-1" aria-hidden="true"></i>
                                        Notlar ve Özel Durumlar
                                    </label>
                                    <textarea asp-for="Notes" class="form-control form-control-lg" rows="4"
                                              id="notes" placeholder="Şirket hakkında ek notlar, özel durumlar..."></textarea>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Şirket ile ilgili önemli notları ve özel durumları belirtiniz
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Actions & Info -->
            <div class="col-lg-4">
                <!-- Save Actions Card -->
                <div class="card mb-4 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-save me-2 text-primary" aria-hidden="true"></i> 
                            Kaydetme İşlemleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-warning btn-lg" id="submitBtn">
                                <i class="fas fa-save me-2" aria-hidden="true"></i>
                                Değişiklikleri Kaydet
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                <i class="fas fa-undo me-2" aria-hidden="true"></i>
                                Formu Sıfırla
                            </button>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info w-100">
                                        <i class="fas fa-eye me-1" aria-hidden="true"></i>
                                        Detay
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-list me-1" aria-hidden="true"></i>
                                        Liste
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info mt-3 mb-0">
                            <small class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-2"></i>
                                <span>
                                    Formu kaydetmeden önce tüm zorunlu alanların doldurulduğundan emin olun.
                                </span>
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Logo Preview Card -->
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-image me-2 text-success" aria-hidden="true"></i> 
                                Logo Önizleme
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            <div id="logoPreview" class="logo-preview-container">
                                <img src="@Model.LogoUrl" alt="@Model.Name Logo" class="img-fluid" 
                                     style="max-height: 100px;" onerror="showDefaultLogo()">
                            </div>
                        </div>
                    </div>
                }

                <!-- Company Statistics Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-chart-pie me-2 text-success" aria-hidden="true"></i> 
                            Firma İstatistikleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    <div class="h4 mb-1 text-primary">#@Model.Id</div>
                                    <small class="text-muted">Firma ID</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    <div class="h4 mb-1 text-info">@((DateTime.Now - Model.CreatedDate).Days)</div>
                                    <small class="text-muted">Sistemde (Gün)</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    @if (Model.IsActive)
                                    {
                                        <div class="badge bg-success fs-6 px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Aktif
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="badge bg-secondary fs-6 px-3 py-2">
                                            <i class="fas fa-pause-circle me-1"></i>
                                            Pasif
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    @if (Model.IsVerified)
                                    {
                                        <div class="badge bg-info fs-6 px-3 py-2">
                                            <i class="fas fa-certificate me-1"></i>
                                            Onaylı
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="badge bg-warning fs-6 px-3 py-2">
                                            <i class="fas fa-clock me-1"></i>
                                            Onaysız
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <hr class="my-3">

                        <div class="small text-muted">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Kayıt Tarihi:</span>
                                <strong>@Model.CreatedDate.ToString("dd.MM.yyyy")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Kayıt Saati:</span>
                                <strong>@Model.CreatedDate.ToString("HH:mm")</strong>
                            </div>
                            @if (Model.UpdatedDate != default(DateTime))
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Son Güncelleme:</span>
                                    <strong>@Model.UpdatedDate.ToString("dd.MM.yyyy HH:mm")</strong>
                                </div>
                            }
                            <div class="d-flex justify-content-between">
                                <span>Şu Anki Güncelleme:</span>
                                <strong>@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Settings Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-cogs me-2 text-warning" aria-hidden="true"></i> 
                            Durum Ayarları
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-toggle-on text-muted me-1" aria-hidden="true"></i>
                                        Firma Durumu
                                    </label>
                                    <div class="form-check form-switch mt-2">
                                        <input asp-for="IsActive" class="form-check-input form-check-input-lg" 
                                               type="checkbox" id="isActive">
                                        <label class="form-check-label ms-2" for="isActive">
                                            <span class="fw-semibold text-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Firma Aktif
                                            </span>
                                            <div class="form-text mt-1">
                                                Aktif firmalar sistemde görünür ve işlem yapabilir
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-certificate text-muted me-1" aria-hidden="true"></i>
                                        Onay Durumu
                                    </label>
                                    <div class="form-check form-switch mt-2">
                                        <input asp-for="IsVerified" class="form-check-input form-check-input-lg" 
                                               type="checkbox" id="isVerified">
                                        <label class="form-check-label ms-2" for="isVerified">
                                            <span class="fw-semibold text-info">
                                                <i class="fas fa-shield-check me-1"></i>
                                                Firma Onaylı
                                            </span>
                                            <div class="form-text mt-1">
                                                Onaylı firmalar doğrulanmış ve güvenilir olarak işaretlenir
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
