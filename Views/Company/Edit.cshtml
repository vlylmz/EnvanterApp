@model WebApplication1.Models.Company
@{
    ViewData["Title"] = "Firma Düzenle";
}

<h2>Firma Düzenle</h2>

<form id="editForm" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label>Aktif mi?</label>
        <input asp-for="IsActive" type="checkbox" />
    </div>

    <button type="button" class="btn btn-primary" onclick="confirmUpdate()">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmUpdate() {
            Swal.fire({
                title: 'Güncelleme Onayı',
                text: "Bu firma bilgilerini güncellemek istiyor musunuz?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Evet, güncelle',
                cancelButtonText: 'İptal',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#aaa'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("editForm").submit();
                }
            });
        }
    </script>
}
