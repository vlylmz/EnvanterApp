@model WebApplication1.ViewModels.CompanyDetailsViewModel

@{
    ViewData["Title"] = "Firma Detayları";
    ViewBag.Title = "Firma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Firmalar</a></li>
            <li class="breadcrumb-item active">@Model.Company!.Name</li>
        </ol>
    </nav>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body bg-gradient-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="avatar-circle">
                                @if (!string.IsNullOrEmpty(Model.Company.LogoUrl))
                                {
                                    <img src="@Model.Company.LogoUrl" alt="@Model.Company.Name Logo" class="company-logo-small"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                    <i class="fas fa-building fa-3x" style="display: none;"></i>
                                }
                                else
                                {
                                    <i class="fas fa-building fa-3x"></i>
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h2 class="mb-1">@Model.Company.Name</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-users me-2"></i>@Model.Employees!.Count Çalışan • @Model.Computers!.Count Bilgisayar
                            </p>
                            <small class="opacity-75">
                                <i class="fas fa-calendar me-1"></i>
                                Kayıt Tarihi: @Model.Company.CreatedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                            </small>
                        </div>
                        <div class="col-md-2 text-center">
                            @if (Model.Company.IsActive)
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6 px-3 py-2">
                                    <i class="fas fa-pause-circle me-1"></i>Pasif
                                </span>
                            }
                            @if (Model.Company.IsVerified)
                            {
                                <span class="badge bg-info fs-6 px-3 py-2 mt-1 d-block">
                                    <i class="fas fa-certificate me-1"></i>Onaylı
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column - Company Information -->
        <div class="col-lg-8">
            <!-- Basic Company Information -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Firma Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-envelope text-muted me-2"></i>E-posta Adresi
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Company.Email))
                                    {
                                        <a href="mailto:@Model.Company.Email" class="text-decoration-none">@Model.Company.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-phone text-muted me-2"></i>Telefon Numarası
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Company.Phone))
                                    {
                                        <a href="tel:@Model.Company.Phone" class="text-decoration-none">@Model.Company.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-globe text-muted me-2"></i>Website
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Company.Website))
                                    {
                                        <a href="@Model.Company.Website" target="_blank" class="text-decoration-none">@Model.Company.Website</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-users text-muted me-2"></i>Çalışan Sayısı
                                </label>
                                <div class="info-value">
                                    @if (Model.Company.EmployeeCount.HasValue)
                                    {
                                        <span class="badge bg-light text-dark">@Model.Company.EmployeeCount kişi</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            @if (!string.IsNullOrEmpty(Model.Company.Address) || !string.IsNullOrEmpty(Model.Company.City))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            Adres Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (!string.IsNullOrEmpty(Model.Company.Address))
                            {
                                <div class="col-md-12">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-home text-muted me-2"></i>Adres
                                        </label>
                                        <div class="info-value">@Model.Company.Address</div>
                                    </div>
                                </div>
                            }
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-city text-muted me-2"></i>Şehir
                                    </label>
                                    <div class="info-value">
                                        @if (!string.IsNullOrEmpty(Model.Company.City))
                                        {
                                            <span>@Model.Company.City</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-map text-muted me-2"></i>İlçe
                                    </label>
                                    <div class="info-value">
                                        @if (!string.IsNullOrEmpty(Model.Company.District))
                                        {
                                            <span>@Model.Company.District</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Company.PostalCode) || !string.IsNullOrEmpty(Model.Company.Country))
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-mail-bulk text-muted me-2"></i>Posta Kodu
                                        </label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.Company.PostalCode))
                                            {
                                                <span>@Model.Company.PostalCode</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-flag text-muted me-2"></i>Ülke
                                        </label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.Company.Country))
                                            {
                                                <span>@Model.Company.Country</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Belirtilmemiş</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Contact Person Information -->
            @if (!string.IsNullOrEmpty(Model.Company.ContactPerson))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-user-tie text-primary me-2"></i>
                            İletişim Kişisi
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-user text-muted me-2"></i>Yetkili Kişi
                                    </label>
                                    <div class="info-value">
                                        <div class="d-flex align-items-center">
                                            <div class="employee-avatar me-3">
                                                @(Model.Company.ContactPerson?.Substring(0, 1).ToUpper())
                                            </div>
                                            <span>@Model.Company.ContactPerson</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-id-badge text-muted me-2"></i>Unvan
                                    </label>
                                    <div class="info-value">
                                        @if (!string.IsNullOrEmpty(Model.Company.ContactTitle))
                                        {
                                            <span>@Model.Company.ContactTitle</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-envelope text-muted me-2"></i>E-posta
                                    </label>
                                    <div class="info-value">
                                        @if (!string.IsNullOrEmpty(Model.Company.ContactEmail))
                                        {
                                            <a href="mailto:@Model.Company.ContactEmail" class="text-decoration-none">@Model.Company.ContactEmail</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-phone text-muted me-2"></i>Telefon
                                    </label>
                                    <div class="info-value">
                                        @if (!string.IsNullOrEmpty(Model.Company.ContactPhone))
                                        {
                                            <a href="tel:@Model.Company.ContactPhone" class="text-decoration-none">@Model.Company.ContactPhone</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Company Assets -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-box text-primary me-2"></i>
                        Firmaya Ait Varlıklar
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="accordion" id="companyAssetsAccordion">
                        <!-- Employees -->
                        <div class="accordion-item border-0">
                            <h2 class="accordion-header" id="headingEmployees">
                                <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseEmployees">
                                    <i class="fas fa-users me-2 text-primary"></i>
                                    <strong>Çalışanlar</strong>
                                    <span class="badge bg-primary rounded-pill ms-auto me-2">@Model.Employees.Count</span>
                                </button>
                            </h2>
                            <div id="collapseEmployees" class="accordion-collapse collapse show"
                                data-bs-parent="#companyAssetsAccordion">
                                <div class="accordion-body">
                                    @if (Model.Employees.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Ad Soyad</th>
                                                        <th>E-posta</th>
                                                        <th>Telefon</th>
                                                        <th>Durum</th>
                                                        <th>İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var employee in Model.Employees.Take(5))
                                                    {
                                                        <tr>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <div class="employee-avatar-small me-2">
                                                                        @(employee.FirstName?.Substring(0, 1).ToUpper())
                                                                    </div>
                                                                    <strong>@employee.FirstName @employee.LastName</strong>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                @if (!string.IsNullOrEmpty(employee.Email))
                                                                {
                                                                    <a href="mailto:@employee.Email" class="text-decoration-none">@employee.Email</a>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (!string.IsNullOrEmpty(employee.Phone))
                                                                {
                                                                    <a href="tel:@employee.Phone" class="text-decoration-none">@employee.Phone</a>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted">-</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (employee.IsActive)
                                                                {
                                                                    <span class="badge bg-success">Aktif</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-secondary">Pasif</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" 
                                                                   class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                            @if (Model.Employees.Count > 5)
                                            {
                                                <div class="text-center py-2">
                                                    <a asp-controller="Employee" asp-action="Index" asp-route-companyId="@Model.Company.Id" 
                                                       class="btn btn-outline-primary">
                                                        Tüm Çalışanları Gör (@Model.Employees.Count)
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-4 text-muted">
                                            <i class="fas fa-users fa-2x mb-2"></i>
                                            <p>Bu firmada kayıtlı çalışan bulunmuyor.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Computers -->
                        <div class="accordion-item border-0">
                            <h2 class="accordion-header" id="headingComputers">
                                <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseComputers">
                                    <i class="fas fa-laptop me-2 text-success"></i>
                                    <strong>Bilgisayarlar</strong>
                                    <span class="badge bg-success rounded-pill ms-auto me-2">@Model.Computers.Count</span>
                                </button>
                            </h2>
                            <div id="collapseComputers" class="accordion-collapse collapse"
                                data-bs-parent="#companyAssetsAccordion">
                                <div class="accordion-body">
                                    @if (Model.Computers.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Bilgisayar</th>
                                                        <th>Varlık Etiketi</th>
                                                        <th>Atanan</th>
                                                        <th>Durum</th>
                                                        <th>İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var computer in Model.Computers.Take(5))
                                                    {
                                                        <tr>
                                                            <td><strong>@computer.Name</strong></td>
                                                            <td><code>@computer.AssetTag</code></td>
                                                            <td>
                                                                @if (computer.AssignedEmployeeId.HasValue)
                                                                {
                                                                    <span class="badge bg-info">Atanmış</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted">Atanmamış</span>
                                                                }
                                                            </td>
                                                            <td><span class="badge bg-primary">@computer.Status</span></td>
                                                            <td>
                                                                <a asp-controller="Computer" asp-action="Details" asp-route-id="@computer.Id" 
                                                                   class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                            @if (Model.Computers.Count > 5)
                                            {
                                                <div class="text-center py-2">
                                                    <a asp-controller="Computer" asp-action="Index" asp-route-companyId="@Model.Company.Id" 
                                                       class="btn btn-outline-primary">
                                                        Tüm Bilgisayarları Gör (@Model.Computers.Count)
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-4 text-muted">
                                            <i class="fas fa-laptop fa-2x mb-2"></i>
                                            <p>Bu firmada kayıtlı bilgisayar bulunmuyor.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description/Notes -->
            @if (!string.IsNullOrEmpty(Model.Company.Description) || !string.IsNullOrEmpty(Model.Company.Notes))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-sticky-note text-primary me-2"></i>
                            Notlar ve Açıklamalar
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Company.Description))
                        {
                            <div class="info-item mb-3">
                                <label class="info-label">
                                    <i class="fas fa-info-circle text-muted me-2"></i>Açıklama
                                </label>
                                <div class="info-value">@Model.Company.Description</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Company.Notes))
                        {
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-sticky-note text-muted me-2"></i>Notlar
                                </label>
                                <div class="info-value">@Model.Company.Notes</div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Quick Actions & Statistics -->
        <div class="col-lg-4">
            <!-- Company Logo -->
            @if (!string.IsNullOrEmpty(Model.Company.LogoUrl))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-image text-primary me-2"></i>
                            Firma Logosu
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.Company.LogoUrl" alt="@Model.Company.Name Logo" class="img-fluid company-logo-large"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                        <div style="display: none;" class="logo-fallback">
                            <i class="fas fa-building fa-4x text-primary mb-2"></i>
                            <p class="text-muted">Logo yüklenemedi</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Quick Actions -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Company.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit me-2"></i>Firmayı Düzenle
                        </a>

                        @if (!string.IsNullOrEmpty(Model.Company.Email))
                        {
                            <a href="mailto:@Model.Company.Email" class="btn btn-outline-primary">
                                <i class="fas fa-envelope me-2"></i>E-posta Gönder
                            </a>
                        }

                        @if (!string.IsNullOrEmpty(Model.Company.Phone))
                        {
                            <a href="tel:@Model.Company.Phone" class="btn btn-outline-success">
                                <i class="fas fa-phone me-2"></i>Ara
                            </a>
                        }

                        <a asp-controller="Employee" asp-action="Create" asp-route-companyId="@Model.Company.Id"
                           class="btn btn-outline-primary">
                            <i class="fas fa-user-plus me-2"></i>Çalışan Ekle
                        </a>

                        <a asp-controller="Computer" asp-action="Create" asp-route-companyId="@Model.Company.Id"
                           class="btn btn-outline-success">
                            <i class="fas fa-laptop me-2"></i>Bilgisayar Ekle
                        </a>

                        <button type="button" class="btn btn-outline-info" onclick="generateReport()">
                            <i class="fas fa-file-alt me-2"></i>Rapor Oluştur
                        </button>

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Sil
                        </button>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar text-primary me-2"></i>
                        Varlık İstatistikleri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-primary mb-0">@Model.Employees.Count</h4>
                                <small class="text-muted">Çalışan</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-success mb-0">@Model.Computers.Count</h4>
                                <small class="text-muted">Bilgisayar</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-warning mb-0">@Model.Software!.Count</h4>
                                <small class="text-muted">Yazılım</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-info mb-0">@Model.Supplies!.Count</h4>
                                <small class="text-muted">Sarf Malzeme</small>
