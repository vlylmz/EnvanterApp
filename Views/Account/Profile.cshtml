@model WebApplication1.Controllers.UserProfileViewModel
@{
    ViewData["Title"] = "Profilim";
}

<div class="container-fluid mt-4">
    <!-- Anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-lg-3">
            <!-- Profile Sidebar -->
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="text-muted mb-3">@Model.UserRole</p>
                    <div class="d-grid gap-2">
                        <a asp-action="EditProfile" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit me-1"></i> Profili Düzenle
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Hesap Durumu</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Kayıt Tarihi:</span>
                        <strong>@Model.CreatedDate.ToString("dd.MM.yyyy")</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>2FA Durumu:</span>
                        @if (Model.TwoFactorEnabled)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Devre Dışı</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Profile Information -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2 text-primary"></i> Profil Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Kullanıcı Adı</label>
                            <p class="mb-0"><strong>@Model.UserName</strong></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Kullanıcı ID</label>
                            <p class="mb-0"><code>@Model.Id</code></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Ad</label>
                            <p class="mb-0"><strong>@Model.FirstName</strong></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Soyad</label>
                            <p class="mb-0"><strong>@Model.LastName</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">E-posta</label>
                            <p class="mb-0">
                                <i class="fas fa-envelope text-muted me-1"></i>
                                @Model.Email
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Telefon</label>
                            <p class="mb-0">
                                <i class="fas fa-phone text-muted me-1"></i>
                                @(Model.PhoneNumber ?? "Belirtilmemiş")
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Rol</label>
                            <p class="mb-0">
                                @{
                                    var roleClass = Model.UserRole switch
                                    {
                                        "Süper Admin" => "badge bg-danger",
                                        "Admin" => "badge bg-primary",
                                        "Employee" => "badge bg-success",
                                        _ => "badge bg-secondary"
                                    };
                                }
                                <span class="@roleClass">@Model.UserRole</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Hesap Oluşturma Tarihi</label>
                            <p class="mb-0">
                                <i class="fas fa-calendar text-muted me-1"></i>
                                @Model.CreatedDate.ToString("dd MMMM yyyy, HH:mm")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2 text-primary"></i> Güvenlik Ayarları
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h6 class="mb-1">İki Faktörlü Doğrulama (2FA)</h6>
                            <p class="text-muted mb-0">
                                @if (Model.TwoFactorEnabled)
                                {
                                    <text>2FA aktif. Hesabınız ekstra güvenlik katmanı ile korunuyor.</text>
                                }
                                else
                                {
                                    <text>2FA devre dışı. Hesabınızı daha güvenli hale getirin.</text>
                                }
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.TwoFactorEnabled)
                            {
                                <button type="button" class="btn btn-danger btn-sm" onclick="disable2FA()">
                                    <i class="fas fa-shield-slash me-1"></i> 2FA'yı Kapat
                                </button>
                            }
                            else
                            {
                                <a asp-controller="Login" asp-action="QrRegister" class="btn btn-success btn-sm">
                                    <i class="fas fa-shield-alt me-1"></i> 2FA'yı Etkinleştir
                                </a>
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h6 class="mb-1">Şifre</h6>
                            <p class="text-muted mb-0">
                                Güvenliğiniz için şifrenizi düzenli olarak değiştirin.
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <button type="button" class="btn btn-outline-primary btn-sm" 
                                onclick="showQuickPasswordChange()">
                                <i class="fas fa-key me-1"></i> Şifre Değiştir
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Hesap İşlemleri</h6>
                            <p class="text-muted mb-0 small">Oturumu kapatmak için aşağıdaki butonu kullanın.</p>
                        </div>
                        <form asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Password Change Modal -->
<div class="modal fade" id="quickPasswordModal" tabindex="-1" aria-labelledby="quickPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickPasswordModalLabel">
                    <i class="fas fa-bolt me-2"></i> Hızlı Şifre Değiştir
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="quickPasswordForm">
                    <div class="mb-3">
                        <label for="quickCurrentPassword" class="form-label">Mevcut Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="quickCurrentPassword" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="toggleQuickPassword('quickCurrentPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="quickNewPassword" class="form-label">Yeni Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="quickNewPassword" required minlength="6">
                            <button class="btn btn-outline-secondary" type="button" onclick="toggleQuickPassword('quickNewPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <small class="text-muted">En az 6 karakter olmalıdır</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="submitQuickPasswordChange()">
                    <i class="fas fa-save me-1"></i> Şifreyi Değiştir
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Sayfa açılışında TempData varsa SweetAlert2 ile göster
        @if (TempData["Success"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı',
                    text: '@TempData["Success"]',
                    confirmButtonColor: '#198754'
                });
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Hata',
                    text: '@TempData["Error"]',
                    confirmButtonColor: '#dc3545'
                });
            </text>
        }
        @if (TempData["Info"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'info',
                    title: 'Bilgi',
                    text: '@TempData["Info"]',
                    confirmButtonColor: '#3085d6'
                });
            </text>
        }


        // Disable 2FA
        async function disable2FA() {
            const result = await Swal.fire({
                title: 'Emin misiniz?',
                text: "2FA'yı devre dışı bırakmak istediğinizden emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-shield-slash me-1"></i> Evet, Kapat',
                cancelButtonText: '<i class="fas fa-arrow-left me-1"></i> İptal',
                reverseButtons: true
            });

            if (result.isConfirmed) {
                try {
                    const form = new FormData();
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        form.append('__RequestVerificationToken', token.value);
                    }
                    
                    const response = await fetch('/Account/Disable2FA', {
                        method: 'POST',
                        body: form
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı!',
                            text: data.message,
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Hata!', data.message || 'İşlem başarısız oldu.', 'error');
                    }
                } catch (error) {
                    Swal.fire('Hata!', 'Bir hata oluştu.', 'error');
                }
            }
        }

        // Show quick password change modal
        function showQuickPasswordChange() {
            document.getElementById('quickPasswordForm').reset();
            const modal = new bootstrap.Modal(document.getElementById('quickPasswordModal'));
            modal.show();
        }

        // Toggle password visibility
        function toggleQuickPassword(fieldId) {
            const field = document.getElementById(fieldId);
            const button = field.nextElementSibling;
            const icon = button.querySelector('i');
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Submit quick password change
        async function submitQuickPasswordChange() {
            const currentPassword = document.getElementById('quickCurrentPassword').value;
            const newPassword = document.getElementById('quickNewPassword').value;
            
            if (!currentPassword || !newPassword) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Uyarı',
                    text: 'Lütfen tüm alanları doldurun.',
                    confirmButtonColor: '#f59e42'
                });
                return;
            }
            
            if (newPassword.length < 6) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Uyarı',
                    text: 'Yeni şifre en az 6 karakter olmalıdır.',
                    confirmButtonColor: '#f59e42'
                });
                return;
            }
            
            // Close modal
            bootstrap.Modal.getInstance(document.getElementById('quickPasswordModal')).hide();
            
            try {
                const form = new FormData();
                form.append('currentPassword', currentPassword);
                form.append('newPassword', newPassword);
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    form.append('__RequestVerificationToken', token.value);
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata',
                        text: 'Güvenlik tokeni bulunamadı!',
                        confirmButtonColor: '#dc3545'
                    });
                    return;
                }
                
                const response = await fetch('/Account/QuickPasswordChange', {
                    method: 'POST',
                    body: form
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const result = await response.json();
                
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı!',
                        text: result.message,
                        confirmButtonColor: '#198754'
                    });
                    // Clear the form
                    document.getElementById('quickPasswordForm').reset();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        text: result.message,
                        confirmButtonColor: '#dc3545'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Hata!',
                    text: 'Bir hata oluştu: ' + error.message,
                    confirmButtonColor: '#dc3545'
                });
            }
        }
    </script>
}
