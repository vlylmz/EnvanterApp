@{
    ViewBag.Title = "Yeni Zimmet";
    var computers = ViewBag.Computers as List<WebApplication1.Models.Computer>;
    var employees = ViewBag.Employees as List<WebApplication1.Models.Employee>;
}

<h2>Yeni Zimmetleme</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Bilgisayar</label>
        <select name="computerId" class="form-control" required>
            <option value="">Seçiniz</option>
            @foreach (var c in computers)
            {
                <option value="@c.Id">@c.Name - @c.AssetTag</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Çalışan</label>
        <select name="employeeId" class="form-control" required>
            <option value="">Seçiniz</option>
            @foreach (var e in employees)
            {
                <option value="@e.Id">@e.FirstName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Zimmetle</button>
</form>
