            "update" or "gÃ¼ncelle" or "dÃ¼zenle" => "badge-warning",
            "delete" or "sil" => "badge-danger",
            "view" or "gÃ¶rÃ¼ntÃ¼le" or "oku" => "badge-info",
            _ => "badge-secondary"
        };
    }
}