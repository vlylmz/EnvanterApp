@model List<WebApplication1.Models.ActivityLog>
@{
    ViewData["Title"] = "Log KayÄ±tlarÄ±";
}

<style>
    .page-header {
        display: flex;
        justify-content: between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .page-title {
        margin: 0;
        color: #495057;
        font-weight: 600;
    }

    .stats-info {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .table-responsive {
        border-radius: 0.375rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid #dee2e6;
        background: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        font-size: 0.875rem;
        padding: 0.75rem;
        vertical-align: middle;
    }

    .table tbody tr {
        border-bottom: 1px solid #dee2e6;
        transition: background-color 0.15s ease-in-out;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table tbody td {
        padding: 0.75rem;
        vertical-align: middle;
        font-size: 0.875rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .user-avatar {
        width: 28px;
        height: 28px;
        background-color: #6c757d;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 0.25rem;
        text-transform: uppercase;
    }

    .badge-success {
        background-color: #d4edda;
        color: #155724;
    }

    .badge-warning {
        background-color: #fff3cd;
        color: #856404;
    }

    .badge-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .badge-info {
        background-color: #d1ecf1;
        color: #0c5460;
    }

    .badge-secondary {
        background-color: #e2e3e5;
        color: #495057;
    }

    .entity-type {
        font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
        background-color: #f8f9fa;
        color: #495057;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.8125rem;
        border: 1px solid #dee2e6;
    }

    .detail-cell {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        cursor: pointer;
        position: relative;
    }

    .detail-cell:hover {
        text-decoration: underline;
        color: #0d6efd;
    }

    .detail-clickable {
        color: #6c757d;
        font-size: 0.75rem;
        margin-left: 0.25rem;
    }

    .date-cell {
        color: #6c757d;
        font-size: 0.8125rem;
        white-space: nowrap;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #6c757d;
    }

    .empty-state-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    /* Modal styles */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1050;
    }

    .modal-overlay.show {
        display: block;
    }

    .detail-modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        border-radius: 0.375rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        max-width: 500px;
        width: 90%;
        max-height: 70vh;
        z-index: 1055;
    }

    .detail-modal.show {
        display: block;
        animation: modalShow 0.15s ease-out;
    }

    .modal-header {
        padding: 1rem 1rem 0.5rem;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 500;
        color: #495057;
    }

    .btn-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: #6c757d;
        cursor: pointer;
        padding: 0;
        width: 1.5rem;
        height: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-close:hover {
        color: #000;
    }

    .modal-body {
        padding: 1rem;
        max-height: 50vh;
        overflow-y: auto;
        word-wrap: break-word;
        line-height: 1.5;
    }

    @@keyframes modalShow {
        from {
            opacity: 0;
            transform: translate(-50%, -50%) scale(0.9);
        }

        to {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .table-responsive {
            font-size: 0.8125rem;
        }

        .detail-cell {
            max-width: 120px;
        }
        pre {
    white-space: pre-wrap;
    word-break: break-word;
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 0.5rem;
}

    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h2 class="page-title">Log KayÄ±tlarÄ±</h2>
        <div class="stats-info">
            Toplam <strong>@Model.Count</strong> kayÄ±t
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>KullanÄ±cÄ±</th>
                        <th>Ä°ÅŸlem</th>
                        <th>VarlÄ±k TÃ¼rÃ¼</th>
                        <th>VarlÄ±k ID</th>
                        <th>YapÄ±lan Ä°ÅŸlem</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>
                                <div class="user-info">
