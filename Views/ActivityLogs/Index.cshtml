@model List<WebApplication1.Models.ActivityLog>

@{
    ViewData["Title"] = "Log Kayıtları";
}

<h2>Log Kayıtları</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>İşlem</th>
            <th>Varlık Türü</th>
            <th>Varlık ID</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@(log.User?.UserName ?? "Bilinmiyor")</td>
                <td>@log.Action</td>
                <td>@log.EntityType</td>
                <td>@log.EntityId</td>
                <td>@log.CreatedDate.ToLocalTime().ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
