                            <td class="detail-cell"
                                onclick="showDetail(`@Html.Raw(Html.Encode(log.Detail).Replace("\n", "\\n"))`)">
                                @if (log.Detail?.Length > 30)
                                {
                                    <span>
                                        @(log.Detail.Substring(0, 30))...
                                        <small class="detail-clickable">(tÄ±klayÄ±n)</small>
                                    </span>
                                }
                                else
                                {
                                    @log.Detail
                                }
                            </td>
                            <td class="date-cell">
                                @log.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“‹</div>
                <h5>HenÃ¼z log kaydÄ± bulunmuyor</h5>
                <p class="text-muted">Sistem aktiviteleri burada gÃ¶rÃ¼ntÃ¼lenecek.</p>
            </div>
        </div>
    }
</div>

<!-- Modal -->
<div class="modal-overlay" id="modalOverlay" onclick="hideDetail()"></div>
<div class="detail-modal" id="detailModal">
    <div class="modal-header">
        <h5 class="modal-title">Ä°ÅŸlem DetayÄ±</h5>
        <button type="button" class="btn-close" onclick="hideDetail()">&times;</button>
    </div>
    <div class="modal-body">
        <pre id="detailContent" style="white-space: pre-wrap; font-family: 'Segoe UI', sans-serif;"></pre>
    </div>

</div>

<script>
    function showDetail(detail) {
        if (!detail || detail.length <= 30) return;

        document.getElementById('detailContent').innerHTML = detail;
        document.getElementById('modalOverlay').classList.add('show');
        document.getElementById('detailModal').classList.add('show');
        document.body.style.overflow = 'hidden';
    }

    function hideDetail() {
        document.getElementById('modalOverlay').classList.remove('show');
        document.getElementById('detailModal').classList.remove('show');
        document.body.style.overflow = 'auto';
    }

    // ESC tuÅŸu ile kapatma
    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') {
            hideDetail();
        }
    });
</script>

