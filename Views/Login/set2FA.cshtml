@using OtpNet
@using QRCoder
@model WebApplication1.Models.User;
@{
    string? qrUrl = null;

    var secretKey = Context.Session.GetString("Pending_2fa_secret_key");
    if (!string.IsNullOrEmpty(secretKey))
    {
        <h1>@secretKey</h1>
        var base32Secret = Base32Encoding.ToString(Convert.FromBase64String(secretKey));

        string issuer = "Envanter";
        string otpauthUrl = $"otpauth://totp/{issuer}?secret={base32Secret}&digits=6";

        var qrGenerator = new QRCodeGenerator();
        var qrCodeData = qrGenerator.CreateQrCode(otpauthUrl, QRCodeGenerator.ECCLevel.L);
        var pngByteQrCode = new PngByteQRCode(qrCodeData);
        byte[] qrCodeByte = pngByteQrCode.GetGraphic(20);
        string base64Image = Convert.ToBase64String(qrCodeByte);

        qrUrl = $"data:image/png;base64,{base64Image}";
    }
}


<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                @if(string.IsNullOrEmpty(qrUrl))
                {
                    <div class="alert alert-danger">Error</div>
                }
                else
                {
                    <style>
                        img {
                            display: block;
                            margin: auto;
                            width: 75%;
                            height: auto;
                        }</style>
                    <img src="@qrUrl" alt="QR Code for 2FA Setup" />



                    <form asp-action="register2FA" method="post">
                        <div class="mb-3">
                            <label for="code_2fa" class="form-label">2FA code</label>
                            <input type="text" name="code_2fa" class="form-control" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Tamam</button>
                        </div>
                    </form>
                    <form asp-action="pass2FA" method="post">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Geç</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>