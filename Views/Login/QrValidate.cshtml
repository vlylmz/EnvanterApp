@{
    ViewData["Title"] = "2FA Doğrulama";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<!-- FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
        <!-- QR Validate Card -->
        <div class="card login-card shadow">
            <!-- Header -->
            <div class="card-header bg-white text-center border-bottom">
                <div class="login-brand mb-2 mt-1">
                    <div class="brand-icon mb-2">
                        <i class="fas fa-shield-alt text-primary"></i>
                    </div>
                    <h2 class="h5 mb-1 text-dark fw-bold">2FA Doğrulama</h2>
                    <small class="text-muted">İki Faktörlü Kimlik Doğrulama</small>
                </div>
            </div>

            <!-- Form Body -->
            <div class="card-body p-3">
                <div class="text-center mb-3">
                    <h1 class="h6 text-dark fw-semibold mb-1">Authenticator Kodunuzu Girin</h1>
                    <p class="text-muted small mb-0">Authenticator uygulamanızdan 6 haneli kodu girin</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span>@ViewBag.Error</span>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Instruction Section -->
                <div class="text-center mb-4">
                    <div class="alert alert-info">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-mobile-alt me-2"></i>
                            <small>
                                Authenticator uygulamanızı açın ve anlık kodu girin
                            </small>
                        </div>
                    </div>
                </div>

                <form action="/Login/QrValidate" method="post">
                    <div class="form-group mb-4">
                        <label for="code_2fa" class="form-label fw-semibold">
                            <i class="fas fa-key text-muted me-1"></i>
                            6 Haneli Doğrulama Kodu
                        </label>
                        <input type="text" name="code" id="code_2fa" class="form-control code-input text-center" 
                               placeholder="000000" required maxlength="6" pattern="[0-9]{6}" inputmode="numeric" autocomplete="one-time-code">
                        <div class="form-text text-center">
                            <i class="fas fa-clock me-1"></i>
                            Kod yaklaşık 30 saniyede bir yenilenir
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Giriş Yap
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="card-footer bg-light text-center">
                <div class="text-muted small">
                    <p class="mb-1">
                        <i class="fas fa-info-circle me-1"></i>
                        Güvenliğiniz için 2FA kodu gereklidir.
                    </p>
                    <a asp-controller="Login" asp-action="Index" class="text-decoration-none text-muted">
                        <i class="fas fa-arrow-left me-1"></i>
                        Geri Dön
                    </a>
                </div>
            </div>
        </div>

        <!-- Security Info -->
        <div class="text-center mt-3">
            <small class="text-muted">
                <i class="fas fa-shield-alt me-1 text-primary"></i>
                Hesabınız iki faktörlü kimlik doğrulama ile korunmaktadır
            </small>
        </div>
    </div>
</div>

<script>
    // Focus on code input when page loads
    document.getElementById('code_2fa').focus();
    
    // Only allow numbers in the code input
    document.getElementById('code_2fa').addEventListener('input', function(e) {
        this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
    });
</script>

