@{
    ViewData["Title"] = "2FA Doğrulama";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<!-- FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
        <!-- QR Validate Card -->
        <div class="card login-card shadow">
            <!-- Header -->
            <div class="card-header bg-white text-center border-bottom">
                <div class="login-brand mb-2 mt-1">
                    <div class="brand-icon mb-2">
                        <i class="fas fa-shield-alt text-primary"></i>
                    </div>
                    <h2 class="h5 mb-1 text-dark fw-bold">2FA Doğrulama</h2>
                    <small class="text-muted">İki Faktörlü Kimlik Doğrulama</small>
                </div>
            </div>

            <!-- Form Body -->
            <div class="card-body p-3">
                <div class="text-center mb-3">
                    <h1 class="h6 text-dark fw-semibold mb-1">Authenticator Kodunuzu Girin</h1>
                    <p class="text-muted small mb-0">Authenticator uygulamanızdan 6 haneli kodu girin</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span>@ViewBag.Error</span>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Instruction Section -->
                <div class="text-center mb-4">
                    <div class="alert alert-info">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-mobile-alt me-2"></i>
                            <small>
                                Authenticator uygulamanızı açın ve anlık kodu girin
                            </small>
                        </div>
                    </div>
                </div>

                <form action="/Login/QrValidate" method="post" id="qrValidateForm" novalidate>
                    <div class="form-group mb-4">
                        <label for="code_2fa" class="form-label fw-semibold">
                            <i class="fas fa-key text-muted me-1"></i>
                            6 Haneli Doğrulama Kodu
                        </label>
                        <div class="code-input-container">
                            <input type="text" name="code" id="code_2fa" class="form-control code-input text-center" 
                                   placeholder="000000" required maxlength="6" pattern="[0-9]{6}" inputmode="numeric" autocomplete="one-time-code">
                        </div>
                        <div class="invalid-feedback">
                            Lütfen 6 haneli doğrulama kodunu girin.
                        </div>
                        <div class="form-text text-center">
                            <i class="fas fa-clock me-1"></i>
                            Kod yaklaşık 30 saniyede bir yenilenir
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary" id="validateBtn">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Giriş Yap
                        </button>
                    </div>
                </form>

                <!-- Alternative options -->
                <div class="text-center">
                    <a href="#" class="text-decoration-none text-muted small" onclick="showHelp()">
                        <i class="fas fa-question-circle me-1"></i>
                        Yardım
                    </a>
                </div>
            </div>

            <!-- Footer -->
            <div class="card-footer bg-light text-center">
                <div class="text-muted small">
                    <p class="mb-1">
                        <i class="fas fa-info-circle me-1"></i>
                        Güvenliğiniz için 2FA kodu gereklidir.
                    </p>
                    <a asp-controller="Login" asp-action="Index" class="text-decoration-none text-muted">
                        <i class="fas fa-arrow-left me-1"></i>
                        Geri Dön
                    </a>
                </div>
            </div>
        </div>

        <!-- Security Info -->
        <div class="text-center mt-3">
            <small class="text-muted">
                <i class="fas fa-shield-alt me-1 text-primary"></i>
                Hesabınız iki faktörlü kimlik doğrulama ile korunmaktadır
            </small>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('qrValidateForm');
        const codeInput = document.getElementById('code_2fa');
        const validateBtn = document.getElementById('validateBtn');

        // Focus on code input
        codeInput.focus();

        // Format code input - only allow digits
        codeInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, ''); // Remove non-digits
            if (value.length > 6) {
                value = value.substring(0, 6);
            }
            e.target.value = value;
        });

        // Simple form submission with basic validation
        form.addEventListener('submit', function(e) {
            const code = codeInput.value.trim();
            
            if (!code || code.length !== 6) {
                e.preventDefault();
                codeInput.classList.add('is-invalid');
                codeInput.focus();
                return false;
            }

            // Remove invalid class if present
            codeInput.classList.remove('is-invalid');
            codeInput.classList.add('is-valid');

            // Show loading state
            validateBtn.disabled = true;
            validateBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Doğrulanıyor...';
            
            // Form will submit normally
            return true;
        });

        // Auto-focus and select on click
        codeInput.addEventListener('click', function() {
            this.select();
        });

        // Clear validation states on input
        codeInput.addEventListener('input', function() {
            this.classList.remove('is-invalid', 'is-valid');
        });

        // Handle paste events
        codeInput.addEventListener('paste', function(e) {
            e.preventDefault();
            const paste = (e.clipboardData || window.clipboardData).getData('text');
            const cleanPaste = paste.replace(/\D/g, '').substring(0, 6);
            this.value = cleanPaste;
        });
    });

    function showHelp() {
        Swal.fire({
            title: '2FA Doğrulama Yardımı',
            html: `
                <div class="text-start">
                    <h6 class="text-primary mb-3">Sorun mu yaşıyorsunuz?</h6>
                    <div class="mb-3">
                        <strong>Kod çalışmıyorsa:</strong>
                        <ul class="small mt-1">
                            <li>Telefonunuzun saatinin doğru olduğundan emin olun</li>
                            <li>Authenticator uygulamasını yeniden açmayı deneyin</li>
                            <li>Yeni bir kod oluşturulmasını bekleyin (30 saniye)</li>
                        </ul>
                    </div>
                    <div class="mb-3">
                        <strong>Uygulamaya erişiminiz yoksa:</strong>
                        <ul class="small mt-1">
                            <li>Sistem yöneticiniz ile iletişime geçin</li>
                            <li>Hesap kurtarma seçeneklerini kontrol edin</li>
                        </ul>
                    </div>
                    <div class="alert alert-info mt-3">
                        <small><i class="fas fa-lightbulb me-1"></i>
                        <strong>İpucu:</strong> Kodu girdikten sonra "Giriş Yap" butonuna tıklayın.
                        </small>
                    </div>
                </div>
            `,
            confirmButtonText: 'Anladım',
            confirmButtonColor: '#0d6efd',
            width: '600px'
        });
    }
</script>

<style>
    /* Custom CSS matching login page design */
    :root {
        --primary-color: #0d6efd;
        --success-color: #198754;
        --warning-color: #fd7e14;
        --danger-color: #dc3545;
        --info-color: #0dcaf0;
        --secondary-color: #6c757d;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --border-radius: 0.375rem;
        --box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        --transition: all 0.15s ease-in-out;
    }

    /* Body styling */
    body {
        background-color: #f8f9fa;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    /* Login card */
    .login-card {
        border: 1px solid #dee2e6;
        border-radius: 10px;
        overflow: hidden;
        background: white;
        max-width: 100%;
        margin-top: 1rem;
    }

    .login-card .card-header {
        background: white !important;
        border-bottom: 1px solid #dee2e6;
        padding: 1.5rem 1.5rem 1rem 1.5rem;
    }

    .login-card .card-footer {
        background: var(--light-color) !important;
        border-top: 1px solid #dee2e6;
        padding: 1rem;
    }

    /* Brand styling - using primary color for validation theme */
    .brand-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-color), #0b5ed7);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        transition: var(--transition);
    }

    .brand-icon i {
        font-size: 1.5rem;
        color: white;
    }

    .brand-icon:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(13, 110, 253, 0.25);
    }

    /* Code input styling */
    .code-input {
        font-family: 'Courier New', monospace;
        font-size: 1.8rem;
        letter-spacing: 0.3em;
        font-weight: bold;
        padding: 1rem;
        border: 2px solid #e9ecef;
    }

    .code-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        outline: none;
    }

    .code-input.is-valid {
        border-color: var(--success-color);
        background: #f8fff9;
    }

    .code-input.is-invalid {
        border-color: var(--danger-color);
        background: #fff5f5;
        animation: shake 0.6s ease-in-out;
    }

    /* Form improvements */
    .form-control, .form-select {
        border-radius: var(--border-radius);
        border: 2px solid #e9ecef;
        transition: var(--transition);
        background: white;
        font-size: 0.95rem;
    }

    /* Button improvements */
    .btn {
        border-radius: var(--border-radius);
        transition: var(--transition);
        font-weight: 500;
        padding: 0.75rem 1.25rem;
        font-size: 0.95rem;
    }

    .btn:hover:not(:disabled) {
        transform: translateY(-1px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.15);
    }

    .btn:disabled {
        opacity: 0.6;
        transform: none !important;
    }

    .btn-primary {
        background: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:hover {
        background: #0b5ed7;
        border-color: #0a58ca;
    }

    /* Alert improvements */
    .alert {
        border: none;
        border-radius: var(--border-radius);
        border-left: 4px solid;
    }

    .alert-danger {
        border-left-color: var(--danger-color);
        background: #f8d7da;
        color: #721c24;
    }

    .alert-info {
        border-left-color: var(--info-color);
        background: #d1ecf1;
        color: #0c5460;
    }

    .alert-warning {
        border-left-color: var(--warning-color);
        background: #fff3cd;
        color: #856404;
    }

    /* Text improvements */
    .form-label {
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--dark-color);
    }

    /* Link improvements */
    a.text-decoration-none:hover {
        text-decoration: underline !important;
    }

    /* Animation for invalid inputs */
    @@keyframes shake {
        0%, 20%, 40%, 60%, 80%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
    }

    /* Loading state */
    .btn:disabled .fa-spinner {
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Card shadow */
    .shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }

    /* Responsive improvements */
    @@media (max-width: 576px) {
        .login-card {
            margin: 0.5rem;
        }
        
        .login-card .card-header {
            padding: 1rem 1rem 0.5rem 1rem;
        }
        
        .card-body {
            padding: 1rem !important;
        }
        
        .login-card .card-footer {
            padding: 0.75rem;
        }
        
        .brand-icon {
            width: 50px;
            height: 50px;
        }
        
        .brand-icon i {
            font-size: 1.25rem;
        }

        .code-input {
            font-size: 1.5rem;
            padding: 0.75rem;
        }
    }

    /* Additional spacing */
    .mt-5 {
        margin-top: 2rem !important;
    }

    /* Code input container */
    .code-input-container {
        position: relative;
    }
</style>