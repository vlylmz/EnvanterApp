@{
    ViewData["Title"] = "QR Kod Kaydı";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@using OtpNet
@using QRCoder
@{
    var sessionTotpBase64 = Context.Session.GetString("adminTotpSecretNew");
    if (sessionTotpBase64 == null)
        return;

    var totpSecret = Convert.FromBase64String(sessionTotpBase64);
    var base32Secret = Base32Encoding.ToString(totpSecret);
    string otpauthUrl = $"otpauth://totp/Envanter?secret={base32Secret}&digits=6";
    var base64Image = Convert.ToBase64String(
    new PngByteQRCode(
    new QRCodeGenerator().CreateQrCode(otpauthUrl, QRCodeGenerator.ECCLevel.L)
    ).GetGraphic(20)
    );

    var qrUrl = $"data:image/png;base64,{base64Image}";
}

<!-- FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
        <!-- QR Register Card -->
        <div class="card login-card shadow">
            <!-- Header -->
            <div class="card-header bg-white text-center border-bottom">
                <div class="login-brand mb-2 mt-1">
                    <div class="brand-icon mb-2">
                        <i class="fas fa-qrcode text-success"></i>
                    </div>
                    <h2 class="h5 mb-1 text-dark fw-bold">2FA Kurulumu</h2>
                    <small class="text-muted">İki Faktörlü Kimlik Doğrulama</small>
                </div>
            </div>

            <!-- Form Body -->
            <div class="card-body p-3">
                <div class="text-center mb-3">
                    <h1 class="h6 text-dark fw-semibold mb-1">Authenticator Uygulamanızı Ayarlayın</h1>
                    <p class="text-muted small mb-0">QR kodu tarayın ve doğrulama kodunu girin</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span>@ViewBag.Error</span>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- QR Code Section -->
                <div class="text-center mb-4">
                    <div class="qr-container mb-3">
                        <img src="@qrUrl" alt="QR Code for 2FA Setup" class="qr-image" />
                    </div>
                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-mobile-alt me-1"></i>
                            <strong>Adım 1:</strong> Google Authenticator, Microsoft Authenticator veya benzer bir
                            uygulama ile QR kodu tarayın
                        </small>
                    </div>
                </div>

                <!-- Manual Entry Option -->
                <details class="mb-3">
                    <summary class="btn btn-link btn-sm text-muted">
                        <i class="fas fa-keyboard me-1"></i>
                        Manuel giriş seçeneği
                    </summary>
                    <div class="alert alert-warning mt-2">
                        <small class="d-block mb-2">
                            <i class="fas fa-key me-1"></i>
                            <strong>Manuel Giriş:</strong> QR kod tarayamıyorsanız, aşağıdaki kodu manuel olarak
                            girebilirsiniz:
                        </small>
                        <div class="text-center">
                            <code class="secret-code bg-light p-2 rounded" id="secretCode">@base32Secret</code>
                            <button type="button" class="btn btn-sm btn-outline-secondary ms-2" onclick="copySecret()"
                                title="Kopyala">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                </details>

                <form action="/Login/QrRegister" method="post">
                    <div class="form-group mb-3">
                        <label for="code_2fa" class="form-label fw-semibold">
                            <i class="fas fa-shield-alt text-muted me-1"></i>
                            6 Haneli Doğrulama Kodu
                        </label>
                        <input type="text" name="code" id="code_2fa" class="form-control code-input text-center"
                            placeholder="000000" required maxlength="6" pattern="[0-9]{6}" inputmode="numeric">
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            <strong>Adım 2:</strong> Authenticator uygulamanızdan 6 haneli kodu girin
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check me-2"></i>
                            2FA'yı Etkinleştir
                        </button>
                    </div>
                </form>
                
                <form action="/Login/QrSkip" method="post" class="mt-2">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-forward me-2"></i>
                            Geç
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="card-footer bg-light text-center">
                <div class="text-muted small">
                    <p class="mb-1">
                        <i class="fas fa-info-circle me-1"></i>
                        Bu adım güvenliğiniz için zorunludur. Lütfen güvenli bir authenticator uygulaması kullanın.
                    </p>
                    <a asp-controller="Login" asp-action="Index" class="text-decoration-none text-muted">
                        <i class="fas fa-arrow-left me-1"></i>
                        Giriş Sayfasına Dön
                    </a>
                </div>
            </div>
        </div>

        <!-- Security Info -->
        <div class="text-center mt-3">
            <small class="text-muted">
                <i class="fas fa-shield-alt me-1 text-success"></i>
                İki faktörlü kimlik doğrulama hesabınızı daha güvenli hale getirir
            </small>
        </div>
    </div>
</div>

<script>
    // Simple script to handle copy function
    function copySecret() {
        const secretCode = document.getElementById('secretCode').textContent;
        
        // Create temporary textarea
        const textArea = document.createElement('textarea');
        textArea.value = secretCode;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        document.body.appendChild(textArea);
        textArea.select();
        
        try {
            document.execCommand('copy');
            // Simple alert instead of SweetAlert
            alert('Gizli kod panoya kopyalandı!');
        } catch (err) {
            alert('Kopyalama başarısız oldu.');
        }
        
        document.body.removeChild(textArea);
    }

    // Focus on code input when page loads
    document.getElementById('code_2fa').focus();
    
    // Only allow numbers in the code input
    document.getElementById('code_2fa').addEventListener('input', function(e) {
        this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
    });
</script>

