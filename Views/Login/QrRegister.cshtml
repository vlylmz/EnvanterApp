@{
    ViewData["Title"] = "İki Faktörlü Doğrulama Kurulumu";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Use main layout since user is logged in
}
@using OtpNet
@using QRCoder
@{
    var totpSecret = Model as byte[];
    var base32Secret = Base32Encoding.ToString(totpSecret);
    string otpauthUrl = $"otpauth://totp/Envanter?secret={base32Secret}&digits=6";
    var base64Image = Convert.ToBase64String(
        new PngByteQRCode(
            new QRCodeGenerator().CreateQrCode(otpauthUrl, QRCodeGenerator.ECCLevel.L)
        ).GetGraphic(20)
    );

    var qrUrl = $"data:image/png;base64,{base64Image}";
}

<div class="container mt-4">
    <!-- TempData Error Message Display -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-start">
                <i class="fas fa-exclamation-circle me-2 fs-5 mt-1"></i>
                <div class="flex-grow-1">
                    <strong>Hata!</strong> @TempData["Error"]
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- TempData Success Message Display -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-start">
                <i class="fas fa-check-circle me-2 fs-5 mt-1"></i>
                <div class="flex-grow-1">
                    <strong>Başarılı!</strong> @TempData["Success"]
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- TempData Warning Message Display -->
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-start">
                <i class="fas fa-exclamation-triangle me-2 fs-5 mt-1"></i>
                <div class="flex-grow-1">
                    <strong>Uyarı!</strong> @TempData["Warning"]
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- TempData Info Message Display -->
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-start">
                <i class="fas fa-info-circle me-2 fs-5 mt-1"></i>
                <div class="flex-grow-1">
                    <strong>Bilgi!</strong> @TempData["Info"]
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="row">
        <!-- Left side - Instructions -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-shield-alt text-success me-2"></i>
                        Neden 2FA?
                    </h5>
                    <p class="text-muted">
                        İki faktörlü doğrulama (2FA), hesabınıza ekstra bir güvenlik katmanı ekler.
                    </p>
                    
                    <div class="mb-3">
                        <h6 class="fw-bold">Avantajları:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Şifreniz çalınsa bile hesabınız güvende kalır
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Yetkisiz erişim girişimlerini önler
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Kurulumu kolay, kullanımı pratik
                            </li>
                        </ul>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>İpucu:</strong> Google Authenticator, Microsoft Authenticator veya Authy gibi uygulamaları kullanabilirsiniz.
                    </div>
                </div>
            </div>
            
            <!-- Back to settings link -->
            <div class="mt-3">
                <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-arrow-left me-2"></i>
                    Profile Geri Dön
                </a>
            </div>
        </div>
        
        <!-- Right side - Setup -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0">
                        <i class="fas fa-qrcode me-2"></i>
                        2FA Kurulum Adımları
                    </h4>
                </div>
                
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <!-- Step 1: QR Code -->
                    <div class="setup-step mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="step-number">1</div>
                            <h5 class="mb-0 ms-3">Authenticator Uygulamanızı Açın</h5>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <p class="text-muted">
                                    Telefonunuzdaki authenticator uygulamasını açın ve QR kodu tarayın:
                                </p>
                                
                                <div class="qr-container text-center mb-3">
                                    <img src="@qrUrl" alt="QR Code for 2FA Setup" class="qr-image" />
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="alert alert-light border">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-mobile-alt me-2"></i>
                                        Önerilen Uygulamalar
                                    </h6>
                                    <ul class="mb-0">
                                        <li>Google Authenticator</li>
                                        <li>Microsoft Authenticator</li>
                                        <li>Authy</li>
                                        <li>1Password</li>
                                    </ul>
                                </div>
                                
                                <!-- Manual entry option (no JavaScript copy function) -->
                                <div class="alert alert-warning">
                                    <p class="small mb-2">
                                        <strong>QR kod tarayamıyor musunuz?</strong><br>
                                        Aşağıdaki kodu uygulamanıza manuel olarak girebilirsiniz:
                                    </p>
                                    <div class="text-center">
                                        <code class="secret-code user-select-all">@base32Secret</code>
                                    </div>
                                    <p class="small text-muted mb-0 mt-2">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Kodu seçip kopyalayabilirsiniz (Ctrl+C / Cmd+C)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <!-- Step 2: Verification -->
                    <div class="setup-step">
                        <div class="d-flex align-items-center mb-3">
                            <div class="step-number">2</div>
                            <h5 class="mb-0 ms-3">Doğrulama Kodunu Girin</h5>
                        </div>
                        
                        <p class="text-muted mb-3">
                            Authenticator uygulamanızda görünen 6 haneli kodu girin:
                        </p>
                        
                        <!-- Using tag helpers for anti-forgery token -->
                        <form asp-action="QrRegister" asp-controller="Login" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <input type="text" 
                                               name="code" 
                                               id="code_2fa" 
                                               class="form-control form-control-lg code-input text-center"
                                               placeholder="000000" 
                                               required 
                                               maxlength="6" 
                                               pattern="[0-9]{6}" 
                                               title="Lütfen 6 haneli sayı girin"
                                               inputmode="numeric"
                                               autocomplete="off"
                                               autofocus>
                                        <div class="form-text text-center mt-2">
                                            <i class="fas fa-clock me-1"></i>
                                            Kod her 30 saniyede bir yenilenir
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-check-circle me-2"></i>
                                    2FA'yı Etkinleştir
                                </button>
                                <a asp-action="Profile" asp-controller="Account" class="btn btn-outline-secondary btn-lg">
                                    İptal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <div class="d-flex align-items-center text-muted">
                        <i class="fas fa-lock me-2"></i>
                        <small>
                            2FA etkinleştirildikten sonra, her girişte authenticator uygulamanızdan bir kod girmeniz gerekecektir.
                        </small>
                    </div>
                </div>
            </div>
            
            <!-- Important Notes -->
            <div class="alert alert-warning mt-3">
                <h6 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Önemli Notlar
                </h6>
                <ul class="mb-0">
                    <li>2FA'yı etkinleştirdikten sonra, telefonunuzu kaybederseniz hesabınıza erişim zorlaşabilir.</li>
                    <li>Authenticator uygulamanızı yedeklemeyi unutmayın.</li>
                    <li>2FA'yı istediğiniz zaman hesap ayarlarından devre dışı bırakabilirsiniz.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    /* Step number styling */
    .step-number {
        width: 40px;
        height: 40px;
        background: #198754;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        flex-shrink: 0;
    }
    
    /* QR Code styling */
    .qr-container {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 0.5rem;
        padding: 1rem;
        display: inline-block;
    }
    
    .qr-image {
        display: block;
        margin: 0 auto;
        width: 200px;
        height: 200px;
    }
    
    /* Code input styling */
    .code-input {
        font-family: 'Courier New', monospace;
        font-size: 2rem;
        letter-spacing: 0.5em;
        font-weight: bold;
        max-width: 300px;
    }
    
    .code-input:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }
    
    /* Secret code styling - make it selectable */
    .secret-code {
        font-family: 'Courier New', monospace;
        font-size: 0.875rem;
        word-break: break-all;
        background: #f8f9fa;
        padding: 0.5rem;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        display: inline-block;
    }
    
    /* Make text easily selectable */
    .user-select-all {
        -webkit-user-select: all;
        -moz-user-select: all;
        -ms-user-select: all;
        user-select: all;
    }
    
    /* Card styling */
    .card {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
    }
    
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #dee2e6;
        padding: 1.25rem;
    }
    
    /* Alert styling for TempData */
    .alert {
        border: none;
        border-radius: 0.375rem;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .qr-image {
            width: 150px;
            height: 150px;
        }
        
        .code-input {
            font-size: 1.5rem;
            letter-spacing: 0.3em;
        }
        
        .step-number {
            width: 35px;
            height: 35px;
            font-size: 1rem;
        }
    }
</style>

