@{
    ViewData["Title"] = "QR Kod Kaydı";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@using OtpNet
@using QRCoder
@{
    var sessionTotpBase64 = Context.Session.GetString("adminTotpSecretNew");
    if (sessionTotpBase64 == null)
        return;

    var totpSecret = Convert.FromBase64String(sessionTotpBase64);
    var base32Secret = Base32Encoding.ToString(totpSecret);
    string otpauthUrl = $"otpauth://totp/Envanter?secret={base32Secret}&digits=6";
    var base64Image = Convert.ToBase64String(
    new PngByteQRCode(
    new QRCodeGenerator().CreateQrCode(otpauthUrl, QRCodeGenerator.ECCLevel.L)
    ).GetGraphic(20)
    );

    var qrUrl = $"data:image/png;base64,{base64Image}";
}

<!-- FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
        <!-- QR Register Card -->
        <div class="card login-card shadow">
            <!-- Header -->
            <div class="card-header bg-white text-center border-bottom">
                <div class="login-brand mb-2 mt-1">
                    <div class="brand-icon mb-2">
                        <i class="fas fa-qrcode text-success"></i>
                    </div>
                    <h2 class="h5 mb-1 text-dark fw-bold">2FA Kurulumu</h2>
                    <small class="text-muted">İki Faktörlü Kimlik Doğrulama</small>
                </div>
            </div>

            <!-- Form Body -->
            <div class="card-body p-3">
                <div class="text-center mb-3">
                    <h1 class="h6 text-dark fw-semibold mb-1">Authenticator Uygulamanızı Ayarlayın</h1>
                    <p class="text-muted small mb-0">QR kodu tarayın ve doğrulama kodunu girin</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span>@ViewBag.Error</span>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- QR Code Section -->
                <div class="text-center mb-4">
                    <div class="qr-container mb-3">
                        <img src="@qrUrl" alt="QR Code for 2FA Setup" class="qr-image" />
                    </div>
                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-mobile-alt me-1"></i>
                            <strong>Adım 1:</strong> Google Authenticator, Microsoft Authenticator veya benzer bir
                            uygulama ile QR kodu tarayın
                        </small>
                    </div>
                </div>

                <!-- Manual Entry Option -->
                <div class="collapse" id="manualEntry">
                    <div class="alert alert-warning">
                        <small class="d-block mb-2">
                            <i class="fas fa-key me-1"></i>
                            <strong>Manuel Giriş:</strong> QR kod tarayamıyorsanız, aşağıdaki kodu manuel olarak
                            girebilirsiniz:
                        </small>
                        <div class="text-center">
                            <code class="secret-code bg-light p-2 rounded" id="secretCode">@base32Secret</code>
                            <button type="button" class="btn btn-sm btn-outline-secondary ms-2" onclick="copySecret()"
                                title="Kopyala">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="text-center mb-3">
                    <button class="btn btn-link btn-sm text-muted" type="button" data-bs-toggle="collapse"
                        data-bs-target="#manualEntry">
                        <i class="fas fa-keyboard me-1"></i>
                        Manuel giriş seçeneği
                    </button>
                </div>

                <form action="/Login/QrRegister" method="post" id="qrRegisterForm" novalidate>
                    <div class="form-group mb-3">
                        <label for="code_2fa" class="form-label fw-semibold">
                            <i class="fas fa-shield-alt text-muted me-1"></i>
                            6 Haneli Doğrulama Kodu
                        </label>
                        <div class="code-input-container">
                            <input type="text" name="code" id="code_2fa" class="form-control code-input text-center"
                                placeholder="000000" required maxlength="6" pattern="[0-9]{6}" inputmode="numeric">
                        </div>
                        <div class="invalid-feedback">
                            Lütfen 6 haneli doğrulama kodunu girin.
                        </div>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            <strong>Adım 2:</strong> Authenticator uygulamanızdan 6 haneli kodu girin
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success" id="registerBtn">
                            <i class="fas fa-check me-2"></i>
                            2FA'yı Etkinleştir
                        </button>
                    </div>
                </form>
                <form action="/Login/QrSkip" method="post" style="display: inline;">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success" id="skipBtn">
                            <i class="fas fa-check me-2"></i>
                            Geç
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="card-footer bg-light text-center">
                <div class="text-muted small">
                    <p class="mb-1">
                        <i class="fas fa-info-circle me-1"></i>
                        Bu adım güvenliğiniz için zorunludur. Lütfen güvenli bir authenticator uygulaması kullanın.
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="text-decoration-none text-muted" onclick="showHelp()">
                            <i class="fas fa-question-circle me-1"></i>
                            Yardım
                        </a>
                        <a asp-controller="Login" asp-action="Index" class="text-decoration-none text-muted">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Info -->
        <div class="text-center mt-3">
            <small class="text-muted">
                <i class="fas fa-shield-alt me-1 text-success"></i>
                İki faktörlü kimlik doğrulama hesabınızı daha güvenli hale getirir
            </small>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('qrRegisterForm');
        const codeInput = document.getElementById('code_2fa');
        const registerBtn = document.getElementById('registerBtn');

        // Focus on code input
        codeInput.focus();

        // Format code input - only allow digits
        codeInput.addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, ''); // Remove non-digits
            if (value.length > 6) {
                value = value.substring(0, 6);
            }
            e.target.value = value;
        });

        // Simple form submission with basic validation
        form.addEventListener('submit', function (e) {
            const code = codeInput.value.trim();

            if (!code || code.length !== 6) {
                e.preventDefault();
                alert('Lütfen 6 haneli doğrulama kodunu girin.');
                codeInput.focus();
                return false;
            }

            // Show loading state
            registerBtn.disabled = true;
            registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Doğrulanıyor...';

            // Form will submit normally
            return true;
        });

        // Auto-focus and select on click
        codeInput.addEventListener('click', function () {
            this.select();
        });
    });

    function copySecret() {
        const secretCode = document.getElementById('secretCode').textContent;

        if (navigator.clipboard) {
            navigator.clipboard.writeText(secretCode).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Kopyalandı!',
                    text: 'Gizli kod panoya kopyalandı.',
                    timer: 2000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            });
        } else {
            // Fallback for older browsers
            const textArea = document.createElement('textarea');
            textArea.value = secretCode;
            document.body.appendChild(textArea);
            textArea.select();
            document.execCommand('copy');
            document.body.removeChild(textArea);

            Swal.fire({
                icon: 'success',
                title: 'Kopyalandı!',
                text: 'Gizli kod panoya kopyalandı.',
                timer: 2000,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
            });
        }
    }

    function showHelp() {
        Swal.fire({
            title: '2FA Kurulum Yardımı',
            html: `
                <div class="text-start">
                    <h6 class="text-success mb-3">Kurulum Adımları:</h6>
                    <ol class="list-unstyled">
                        <li class="mb-2"><strong>1.</strong> Telefonunuza bir authenticator uygulaması indirin:
                            <ul class="small mt-1">
                                <li>Google Authenticator</li>
                                <li>Microsoft Authenticator</li>
                                <li>Authy</li>
                            </ul>
                        </li>
                        <li class="mb-2"><strong>2.</strong> Uygulamada "QR kod tara" seçeneğini kullanın</li>
                        <li class="mb-2"><strong>3.</strong> Yukarıdaki QR kodu telefonunuzla tarayın</li>
                        <li class="mb-2"><strong>4.</strong> Uygulamada görünen 6 haneli kodu girin</li>
                        <li class="mb-2"><strong>5.</strong> "2FA'yı Etkinleştir" butonuna tıklayın</li>
                    </ol>
                    <div class="alert alert-warning mt-3">
                        <small><i class="fas fa-exclamation-triangle me-1"></i>
                        <strong>Önemli:</strong> Bu kurulum tamamlandıktan sonra giriş yapmak için her seferinde authenticator uygulamanızdan kod girmeniz gerekecek.
                        </small>
                    </div>
                </div>
            `,
            confirmButtonText: 'Anladım',
            confirmButtonColor: '#198754',
            width: '600px'
        });
    }
</script>

<style>
