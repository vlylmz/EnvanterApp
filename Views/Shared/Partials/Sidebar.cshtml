    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
        }

        .sidebar::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
            background-size: 300% 300%;
            animation: gradientShift 8s ease infinite;
        }

        @@keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .sidebar .text-center {
            padding: 25px 0;
            margin-bottom: 0;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
        }

        .sidebar .text-center::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 60px;
            height: 2px;
            background: linear-gradient(90deg, transparent, #4ecdc4, transparent);
            transform: translateX(-50%);
        }

        .sidebar .text-center a {
            font-size: 1.8rem !important;
            font-weight: 700 !important;
            letter-spacing: 3px !important;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .sidebar .text-center a:hover {
            transform: scale(1.05);
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
        }

        .nav-item {
            margin-bottom: 2px;
        }

        .nav-link {
            padding: 15px 20px !important;
            margin: 2px 10px;
            border-radius: 12px !important;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
            border: 1px solid transparent;
            position: relative;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(5px);
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s;
        }

        .nav-link:hover::before {
            left: 100%;
        }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.1) !important;
            transform: translateX(8px);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .nav-link i {
            width: 20px;
            text-align: center;
            margin-right: 12px !important;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .nav-link:hover i {
            transform: scale(1.1);
            color: #4ecdc4;
            text-shadow: 0 0 10px rgba(78, 205, 196, 0.5);
        }

        .collapse .nav-link {
            padding: 12px 25px !important;
            margin: 1px 5px 1px 25px;
            font-size: 0.9rem;
            background: rgba(0, 0, 0, 0.1);
            border-left: 3px solid transparent;
        }

        .collapse .nav-link:hover {
            background: rgba(255, 255, 255, 0.08) !important;
            border-left-color: #4ecdc4;
            transform: translateX(5px);
        }

        .collapse .nav-link i {
            font-size: 0.9rem;
            margin-right: 10px !important;
        }

        /* Ana menü öğeleri için özel renkler */
        .nav-item:nth-child(1) .nav-link:hover i { color: #ff6b6b; }
        .nav-item:nth-child(2) .nav-link:hover i { color: #4ecdc4; }
        .nav-item:nth-child(3) .nav-link:hover i { color: #45b7d1; }
        .nav-item:nth-child(4) .nav-link:hover i { color: #96ceb4; }
        .nav-item:nth-child(5) .nav-link:hover i { color: #feca57; }
        .nav-item:nth-child(6) .nav-link:hover i { color: #ff9ff3; }
        .nav-item:nth-child(7) .nav-link:hover i { color: #54a0ff; }
        .nav-item:nth-child(8) .nav-link:hover i { color: #5f27cd; }
        .nav-item:nth-child(9) .nav-link:hover i { color: #00d2d3; }
        .nav-item:nth-child(10) .nav-link:hover i { color: #ff9f43; }

        /* Scrollbar özelleştirme */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.05);
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 3px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        /* Collapse animasyonu */
        .collapse {
            transition: all 0.3s ease;
        }

        .collapsing {
            transition: height 0.3s ease;
        }

        /* Responsive iyileştirmeleri */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100% !important;
                min-height: auto !important;
                height: auto !important;
            }
        }
        .sidebar a {
            color: #ffffff !important;
        }
        /* Glow efekti */
        @@keyframes glow {
            0%, 100% { box-shadow: 0 0 20px rgba(78, 205, 196, 0.3); }
            50% { box-shadow: 0 0 30px rgba(78, 205, 196, 0.5); }
        }

        .nav-link.active {
            background: rgba(78, 205, 196, 0.2) !important;
            border-color: #4ecdc4;
            animation: glow 2s ease-in-out infinite;
        }
    </style>
</head>
