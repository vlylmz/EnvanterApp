@*
    _Layout.cshtml

*@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap, FontAwesome, SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" asp-append-version="true" />
    
    <style>
        /* Ensure full height layout */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        
        .layout-container {
            min-height: 100vh;
            display: flex;
        }
        
        .sidebar-container {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            overflow-y: auto;
        }
        
        .main-content {
            flex: 1;
            margin-left: 250px; /* Adjust this to match your sidebar width */
            min-height: 100vh;
        }
        
        /* If your sidebar has a different width, adjust the margin-left above */
        /* Common sidebar widths are 200px, 250px, or 280px */
    </style>
</head>
<body>
    <div class="layout-container">
        <div class="sidebar-container">
            <partial name="~/Views/Shared/Partials/Sidebar.cshtml" />
        </div>

        <div class="main-content">
            <partial name="~/Views/Shared/Partials/Navbar.cshtml" />

            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scriptler en sona, doğru sırada -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>