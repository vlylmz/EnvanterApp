@model WebApplication1.Models.Employee

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">@Model.FirstName @Model.LastName - Çalışan Detayı</h3>
    </div>
    <div class="card-body">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Durum:</strong> @(Model.IsActive ? "Aktif" : "Pasif")</p>
        <p><strong>Firma Id:</strong> @Model.CompanyId</p>
        <p><strong>Oluşturulma Tarihi:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy")</p>
    </div>
</div>

<a href="/Employee/List" class="btn btn-secondary mt-4">← Tüm Çalışanlara Dön</a>

<!-- Bootstrap Accordion Başlangıcı -->
<div class="accordion mt-4" id="employeeDetailsAccordion">

    <!-- Zimmettekiler -->
    <div class="accordion-item rounded mb-2 border">
        <h2 class="accordion-header" id="headingAssignments">
            <button class="accordion-button collapsed bg-white d-flex align-items-center" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseAssignments"
                    aria-expanded="false"
                    aria-controls="collapseAssignments">
                <i class="bi bi-archive me-2"></i> <!-- İkon -->
                Zimmettekiler
            </button>
        </h2>
        <div id="collapseAssignments" class="accordion-collapse collapse"
             aria-labelledby="headingAssignments"
             data-bs-parent="#employeeDetailAccordion">
            <div class="accordion-body">
                <table class="table table-bordered table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Envanter Türü</th>
                            <th>Adı</th>
                            <th>Barkod / Seri No</th>
                            <th>Zimmet Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Bilgisayar</td>
                            <td>PC-001</td>
                            <td>A123456</td>
                            <td>15.06.2024</td>
                        </tr>
                        <tr>
                            <td>Yazılım</td>
                            <td>Office 365</td>
                            <td>MS-2024-001</td>
                            <td>20.06.2024</td>
                        </tr>
                        <tr>
                            <td>Sarf Malzeme</td>
                            <td>Toner</td>
                            <td>TNR-002</td>
                            <td>05.07.2024</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- İşlem Geçmişi -->
        <div class="accordion-item rounded border">
            <h2 class="accordion-header" id="headingLog">
                <button class="accordion-button collapsed bg-white d-flex align-items-center" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapseLog"
                        aria-expanded="false"
                        aria-controls="collapseLog">
                    <i class="bi bi-clock-history me-2"></i> <!-- İkon -->
                    İşlem Geçmişi
                </button>
            </h2>
            <div id="collapseLog" class="accordion-collapse collapse"
                 aria-labelledby="headingLog"
                 data-bs-parent="#employeeDetailAccordion">
                <div class="accordion-body">
                    <ul>
                        <li>01.06.2024 - Çalışan eklendi.</li>
                        <li>15.06.2024 - Bilgiler güncellendi.</li>
                        <li>20.06.2024 - Pasif yapıldı.</li>
                    </ul>
                </div>
            </div>
        </div>
       
        
        </div>
</div>
