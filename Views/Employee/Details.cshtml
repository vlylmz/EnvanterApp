@model WebApplication1.Models.Employee

@{
    ViewData["Title"] = "Çalışan Detayları";
    ViewBag.Title = "Çalışan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid mt-4">
    <!-- Header Section -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Çalışanlar</a></li>
            <li class="breadcrumb-item active">@Model.FirstName @Model.LastName</li>
        </ol>
    </nav>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body bg-gradient-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="avatar-circle">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h2 class="mb-1">@Model.FirstName @Model.LastName</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-building me-2"></i>@(Model.Company?.Name ?? "Firma Atanmamış")
                            </p>
                            <small class="opacity-75">
                                <i class="fas fa-calendar me-1"></i>
                                Kayıt Tarihi: @Model.CreatedDate.ToString("dd MMMM yyyy", new
                                                                System.Globalization.CultureInfo("tr-TR"))
                            </small>
                        </div>
                        <div class="col-md-2 text-center">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6 px-3 py-2">
                                    <i class="fas fa-times-circle me-1"></i>Pasif
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column - Personal Information -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        Kişisel Bilgiler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-envelope text-muted me-2"></i>E-posta Adresi
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-phone text-muted me-2"></i>Telefon Numarası
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-id-badge text-muted me-2"></i>Çalışan ID
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-light text-dark">#@Model.Id</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-clock text-muted me-2"></i>Hesap Durumu
                                </label>
                                <div class="info-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>Pasif
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Company Information -->
            @if (Model.Company != null)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-building text-primary me-2"></i>
                            Firma Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="company-icon me-3">
                                <i class="fas fa-building fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">@Model.Company.Name</h6>
                                <small class="text-muted">Bağlı Firma</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Quick Actions & Statistics -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit me-2"></i>Düzenle
                        </a>

                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                                <i class="fas fa-envelope me-2"></i>E-posta Gönder
                            </a>
                        }

                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <a href="tel:@Model.Phone" class="btn btn-outline-success">
                                <i class="fas fa-phone me-2"></i>Ara
                            </a>
                        }

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Sil
                        </button>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->

            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="stat-item">
                            <h4 class="text-primary mb-0">@((DateTime.Now - Model.CreatedDate).Days)</h4>
                            <small class="text-muted">Gün Önce Eklendi</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-item">
                            <h4 class="text-success mb-0">
                                @(Model.IsActive ? "✓" : "✗")
                            </h4>
                            <small class="text-muted">Durum</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Time Log Panel Sliderlı -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-history text-primary me-2"></i>
                    Firma Aktiviteleri
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="timeline-logs px-3 py-2">
                    @if (Model.ActivityLogs != null && Model.ActivityLogs.Any())
                    {
                        @foreach (var log in Model.ActivityLogs)
                        {
                            var uniqueId = Guid.NewGuid().ToString("N");
                            <div class="log-entry border-bottom pb-2 mb-2">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">
                                            <i class="fas fa-info-circle text-secondary me-1"></i>
                                            <span>@log.Action</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-1">
                                    <div class="text-muted small">
                                        <i class="fas fa-user me-1"></i>
                                        @(log.User?.Email ?? "Bilinmiyor")
                                    </div>
                                    <div class="text-muted small">
                                        <i class="fas fa-clock me-1"></i>
                                        @log.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(log.Detail))
                                {
                                    <div class="mt-1">
                                        <a href="#" class="text-primary small"
                                            onclick="document.getElementById('@uniqueId').style.display='block'; this.style.display='none'; document.getElementById('hide-@uniqueId').style.display='inline'; return false;">
                                            <i class="fas fa-eye me-1"></i>Detayları göster
                                        </a>
                                        <a href="#" id="hide-@uniqueId" class="text-primary small" style="display:none;"
                                            onclick="document.getElementById('@uniqueId').style.display='none'; this.style.display='none'; this.previousElementSibling.style.display='inline'; return false;">
                                            <i class="fas fa-eye-slash me-1"></i>Detayları gizle
                                        </a>
                                    </div>
                                    <div id="@uniqueId" class="mt-2 p-2 bg-light rounded"
                                        style="display: none; border-left: 3px solid #007bff;">
                                        <small class="text-muted" style="white-space: pre-line;">@log.Detail</small>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
                @if (Model.ActivityLogs != null && Model.ActivityLogs.Count >= 10)
                {
                    <div class="text-center py-2 bg-light">
                        <a asp-controller="ActivityLog" asp-action="Index" asp-route-entityType="Company"
                            asp-route-entityId="@Model.Company.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-list me-1"></i>Tüm Aktiviteleri Gör
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .timeline-logs {
        max-height: 300px;
        overflow-y: auto;
        background: #f7fafc;
        border-radius: 0 0 12px 12px;
    }

    .timeline-logs::-webkit-scrollbar {
        width: 10px;
        background: #e2e8f0;
        border-radius: 10px;
    }

    .timeline-logs::-webkit-scrollbar-thumb {
        background: linear-gradient(160deg, #007bff 30%, #54a0ff 100%);
        border-radius: 10px;
    }

    .timeline-logs::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(180deg, #0056b3, #007bff);
    }

    .log-entry {
        transition: all 0.3s ease;
        padding: 12px 8px;
        border-radius: 8px;
        margin-bottom: 8px;
    }

    .log-entry:hover {
        background: #e8f0fe;
        transform: translateX(5px);
    }

    .log-entry:last-child {
        border-bottom: none !important;
        margin-bottom: 0;
        padding-bottom: 8px;
    }

    /* Icon colors for activity types */
    .log-entry .fa-plus-circle {
        color: #28a745;
    }

    .log-entry .fa-edit {
        color: #ffc107;
    }

    .log-entry .fa-trash {
        color: #dc3545;
    }

    .log-entry .fa-check-circle {
        color: #28a745;
    }

    .log-entry .fa-times-circle {
        color: #6c757d;
    }

    .log-entry .fa-user-plus {
        color: #17a2b8;
    }

    .log-entry .fa-user-minus {
        color: #fd7e14;
    }

    .log-entry .fa-laptop {
        color: #007bff;
    }

    /* Animation for new log entries */
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .log-entry {
        animation: slideIn 0.3s ease-out;
    }

    /* Simple styles for clickable logs */
    .log-entry.has-detail:hover {
        background: #e3ebf6 !important;
    }

    .log-detail-content {
        border-left: 3px solid #007bff;
        background: #f0f4f8 !important;
    }
</style>

</div>
</div>

<!-- Navigation -->
<div class="row mt-4">
    <div class="col-12">
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Çalışan Listesi
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-edit me-2"></i>Düzenle
                </a>
                <button type="button" class="btn btn-outline-danger btn-lg" data-bs-toggle="modal"
                    data-bs-target="#deleteModal">
                    <i class="fas fa-trash me-2"></i>Sil
                </button>
            </div>
        </div>
    </div>
</div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Çalışanı Sil
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>@Model.FirstName @Model.LastName</strong> adlı çalışanı silmek istediğinizden emin misiniz?
                </p>
                <p class="text-muted">Bu işlem geri alınamaz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

