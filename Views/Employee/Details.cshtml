@model WebApplication1.Models.Employee

@{
    ViewData["Title"] = "Çalışan Detayları";
    ViewBag.Title = "Çalışan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Çalışanlar</a></li>
            <li class="breadcrumb-item active">@Model.FirstName @Model.LastName</li>
        </ol>
    </nav>

    <!-- TempData Error Message Display -->
    @if (TempData["Error"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-circle me-2 fs-5 mt-1"></i>
                        <div class="flex-grow-1">
                            <strong>Hata!</strong> @TempData["Error"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- TempData Success Message Display -->
    @if (TempData["Success"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-check-circle me-2 fs-5 mt-1"></i>
                        <div class="flex-grow-1">
                            <strong>Başarılı!</strong> @TempData["Success"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- TempData Warning Message Display -->
    @if (TempData["Warning"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-triangle me-2 fs-5 mt-1"></i>
                        <div class="flex-grow-1">
                            <strong>Uyarı!</strong> @TempData["Warning"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- TempData Info Message Display -->
    @if (TempData["Info"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-info-circle me-2 fs-5 mt-1"></i>
                        <div class="flex-grow-1">
                            <strong>Bilgi!</strong> @TempData["Info"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body bg-gradient-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="avatar-circle">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h2 class="mb-1">@Model.FirstName @Model.LastName</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-building me-2"></i>@(Model.Company?.Name ?? "Firma Atanmamış")
                            </p>
                            <small class="opacity-75">
                                <i class="fas fa-calendar me-1"></i>
                                Kayıt Tarihi: @Model.CreatedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                            </small>
                        </div>
                        <div class="col-md-2 text-center">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6 px-3 py-2">
                                    <i class="fas fa-times-circle me-1"></i>Pasif
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column - Personal Information -->
        <div class="col-lg-8">
            <!-- Kişisel Bilgiler -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        Kişisel Bilgiler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-envelope text-muted me-2"></i>E-posta Adresi
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-phone text-muted me-2"></i>Telefon Numarası
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-id-badge text-muted me-2"></i>Çalışan ID
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-light text-dark">#@Model.Id</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-clock text-muted me-2"></i>Hesap Durumu
                                </label>
                                <div class="info-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>Pasif
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Firma Bilgileri -->
            @if (Model.Company != null)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-building text-primary me-2"></i>
                            Firma Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="company-icon me-3">
                                <i class="fas fa-building fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">@Model.Company.Name</h6>
                                <small class="text-muted">Bağlı Firma</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Zimmetli Mallar -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-box text-primary me-2"></i>
                        Zimmetli Mallar
                        <span class="badge bg-primary ms-2" id="assignedItemsCount">Yükleniyor...</span>
                    </h5>
                    <a asp-controller="Item" asp-action="Create" asp-route-employeeId="@Model.Id" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-plus me-1"></i>Yeni Zimmet
                    </a>
                </div>
                <div class="card-body p-0">
                    <div id="assignedItemsContainer">
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                            <p class="mt-2 text-muted">Zimmetli mallar yükleniyor...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Zaman Çizelgesi -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-history text-primary me-2"></i>
                        Zaman Çizelgesi
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="timeline-logs px-3 py-2">
                        @if (Model.ActivityLogs != null && Model.ActivityLogs.Any())
                        {
                            @foreach (var log in Model.ActivityLogs)
                            {
                                var uniqueId = Guid.NewGuid().ToString("N");
                                <div class="log-entry border-bottom pb-2 mb-2">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="fw-bold">
                                                <i class="fas fa-info-circle text-secondary me-1"></i>
                                                <span>@log.Action</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-1">
                                        <div class="text-muted small">
                                            <i class="fas fa-user me-1"></i>
                                            @(log.User?.Email ?? "Bilinmiyor")
                                        </div>
                                        <div class="text-muted small">
                                            <i class="fas fa-clock me-1"></i>
                                            @log.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(log.Detail))
                                    {
                                        <div class="mt-1">
                                            <a href="#" class="text-primary small"
                                               onclick="document.getElementById('@uniqueId').style.display='block'; this.style.display='none'; document.getElementById('hide-@uniqueId').style.display='inline'; return false;">
                                                <i class="fas fa-eye me-1"></i>Detayları göster
                                            </a>
                                            <a href="#" id="hide-@uniqueId" class="text-primary small" style="display:none;"
                                               onclick="document.getElementById('@uniqueId').style.display='none'; this.style.display='none'; this.previousElementSibling.style.display='inline'; return false;">
                                                <i class="fas fa-eye-slash me-1"></i>Detayları gizle
                                            </a>
                                        </div>
                                        <div id="@uniqueId" class="mt-2 p-2 bg-light rounded"
                                             style="display: none; border-left: 3px solid #007bff;">
                                            <small class="text-muted" style="white-space: pre-line;">@log.Detail</small>
                                        </div>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="fas fa-history fa-3x mb-2"></i>
                                <p>Aktivite kaydı bulunamadı.</p>
                            </div>
                        }
                    </div>
                    @if (Model.ActivityLogs != null && Model.ActivityLogs.Count >= 10)
                    {
                        <div class="text-center py-2 bg-light">
                            <a asp-controller="ActivityLog" asp-action="Index" asp-route-entityType="Employee"
                               asp-route-entityId="@Model.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-list me-1"></i>Tüm Aktiviteleri Gör
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Quick Actions & Statistics -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Düzenle
                        </a>

                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                                <i class="fas fa-envelope me-2"></i>E-posta Gönder
                            </a>
                        }

                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <a href="tel:@Model.Phone" class="btn btn-outline-success">
                                <i class="fas fa-phone me-2"></i>Ara
                            </a>
                        }

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Pasife Al
                        </button>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar text-primary me-2"></i>
                        İstatistikler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-primary mb-0">@((DateTime.Now - Model.CreatedDate).Days)</h4>
                                <small class="text-muted">Gün Önce Eklendi</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-success mb-0" id="totalItemsCount">0</h4>
                                <small class="text-muted">Zimmetli Mal</small>
                            </div>
                        </div>
                        <div class="col-6 mt-3">
                            <div class="stat-item">
                                <h4 class="text-info mb-0" id="activeItemsCount">0</h4>
                                <small class="text-muted">Aktif Zimmet</small>
                            </div>
                        </div>
                        <div class="col-6 mt-3">
                            <div class="stat-item">
                                <h4 class="text-warning mb-0">@(Model.ActivityLogs?.Count ?? 0)</h4>
                                <small class="text-muted">Aktivite Sayısı</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between flex-wrap gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Çalışan Listesi
                </a>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Çalışanı Sil
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>@Model.FirstName @Model.LastName</strong> adlı çalışanı silmek istediğinizden emin misiniz?</p>
                <p class="text-muted">Bu işlem geri alınamaz.</p>
                <div id="deleteWarning" style="display: none;">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Dikkat:</strong> Bu çalışanın zimmetli malları bulunmaktadır.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .info-item {
        padding: 15px;
        border-radius: 8px;
        background: #f8f9fa;
        height: 100%;
        transition: all 0.3s ease;
    }

        .info-item:hover {
            background: #e9ecef;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .info-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 8px;
        display: block;
    }

    .info-value {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }

    .timeline-logs {
        max-height: 400px;
        overflow-y: auto;
        background: #f7fafc;
    }

        .timeline-logs::-webkit-scrollbar {
            width: 8px;
        }

        .timeline-logs::-webkit-scrollbar-track {
            background: #e2e8f0;
            border-radius: 4px;
        }

        .timeline-logs::-webkit-scrollbar-thumb {
            background: linear-gradient(160deg, #007bff 30%, #54a0ff 100%);
            border-radius: 4px;
        }

            .timeline-logs::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(180deg, #0056b3, #007bff);
            }

    .log-entry:last-child {
        border-bottom: none !important;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .log-entry {
        transition: background 0.2s ease;
    }

        .log-entry:hover {
            background: #e3ebf6;
            border-radius: 8px;
            margin: 0 -8px;
            padding-left: 8px;
            padding-right: 8px;
        }

    .stat-item {
        padding: 15px 10px;
        transition: transform 0.3s ease;
    }

        .stat-item:hover {
            transform: scale(1.05);
        }

    .company-icon {
        width: 60px;
        height: 60px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .table-responsive {
        border-radius: 0;
    }

    .table th {
        background: #f8f9fa;
        border-top: none;
        font-weight: 600;
        color: #495057;
    }

    .btn-group .btn {
        border-radius: 4px;
        margin-right: 2px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .timeline-logs {
            max-height: 300px;
        }

        .stat-item h4 {
            font-size: 1.5rem;
        }

        .avatar-circle {
            width: 60px;
            height: 60px;
        }

            .avatar-circle i {
                font-size: 2rem !important;
            }

        .d-flex.gap-2.flex-wrap {
            flex-direction: column;
        }

            .d-flex.gap-2.flex-wrap .btn {
                width: 100%;
            }
    }
</style>

<script>
    // AJAX ile zimmetli malları yükle
    document.addEventListener('DOMContentLoaded', function() {
        loadAssignedItems();
    });

    async function loadAssignedItems() {
        try {
            const response = await fetch(`/api/items/employee/@Model.Id`);

            if (!response.ok) {
                throw new Error('API çağrısı başarısız');
            }

            const items = await response.json();
            displayAssignedItems(items);
            updateStatistics(items);

        } catch (error) {
            console.error('Zimmetli mallar yüklenirken hata:', error);
            displayErrorMessage();
        }
    }

    function displayAssignedItems(items) {
        const container = document.getElementById('assignedItemsContainer');
        const countBadge = document.getElementById('assignedItemsCount');

        countBadge.textContent = items.length;

        if (items.length === 0) {
            container.innerHTML = `
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Zimmetli mal bulunmuyor</h6>
                    <p class="text-muted small">Bu çalışana henüz hiçbir mal zimmeti yapılmamış.</p>
                    <a href="/Item/Create?employeeId=@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-1"></i>İlk Zimmeti Ekle
                    </a>
                </div>
            `;
            return;
        }

        let tableHtml = `
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-tag me-1"></i>Mal Adı</th>
                            <th><i class="fas fa-barcode me-1"></i>Sistem Barkodu</th>
                            <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                            <th><i class="fas fa-calendar me-1"></i>Zimmet Tarihi</th>
                            <th><i class="fas fa-cogs me-1"></i>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
        `;

        items.forEach(item => {
            const statusBadge = item.isActive
                ? '<span class="badge bg-success"><i class="fas fa-check me-1"></i>Aktif</span>'
                : '<span class="badge bg-secondary"><i class="fas fa-pause me-1"></i>Pasif</span>';

            const assignmentDate = item.assignmentDate
                ? new Date(item.assignmentDate).toLocaleDateString('tr-TR')
                : '-';

            tableHtml += `
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-laptop text-muted me-2"></i>
                            <div>
                                <div class="fw-bold">${item.name || 'Adı yok'}</div>
                                ${item.description ? `<small class="text-muted">${item.description}</small>` : ''}
                            </div>
                        </div>
                    </td>
                    <td>
                        ${item.systemBarcode ? `<span class="badge bg-light text-dark">${item.systemBarcode}</span>` : '<span class="text-muted">-</span>'}
                    </td>
                    <td>${statusBadge}</td>
                    <td><small class="text-muted">${assignmentDate}</small></td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="/Item/Details/${item.id}" class="btn btn-outline-primary btn-sm" title="Detaylar">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button type="button" class="btn btn-outline-warning btn-sm"
                                    title="Zimmeti Kaldır" onclick="removeAssignment(${item.id})">
                                <i class="fas fa-user-minus"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `;
        });

        tableHtml += `
                    </tbody>
                </table>
            </div>
        `;

        container.innerHTML = tableHtml;
    }

    function updateStatistics(items) {
        const totalCount = items.length;
        const activeCount = items.filter(item => item.isActive).length;

        document.getElementById('totalItemsCount').textContent = totalCount;
        document.getElementById('activeItemsCount').textContent = activeCount;

        // Delete warning güncelle
        if (totalCount > 0) {
            document.getElementById('deleteWarning').style.display = 'block';
        }
    }

    function displayErrorMessage() {
        const container = document.getElementById('assignedItemsContainer');
        const countBadge = document.getElementById('assignedItemsCount');

        countBadge.textContent = '0';
        container.innerHTML = `
            <div class="text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h6 class="text-muted">Veriler yüklenemedi</h6>
                <p class="text-muted small">Zimmetli mallar yüklenirken bir hata oluştu.</p>
                <button onclick="loadAssignedItems()" class="btn btn-outline-primary">
                    <i class="fas fa-redo me-1"></i>Tekrar Dene
                </button>
            </div>
        `;
    }

    async function removeAssignment(itemId) {
        if (!confirm('Bu zimmeti kaldırmak istediğinizden emin misiniz?')) {
            return;
        }

        try {
            const response = await fetch(`/api/items/${itemId}/remove-assignment`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                loadAssignedItems(); // Listeyi yenile
            } else {
                alert('Zimmet kaldırma işlemi başarısız oldu.');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Bir hata oluştu.');
        }
    }

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
</script>