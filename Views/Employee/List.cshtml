@model List<WebApplication1.Models.Employee>

<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
    <h2 class="mb-0">Çalışanlar</h2>
    <a href="/Employee/Create" class="btn btn-success">Yeni Çalışan Ekle</a>
</div>
<div class="card p-3 mb-3">
    <form method="get" action="/Employee/List">
        <div class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Çalışan ara..." value="@ViewBag.SearchString" />
            </div>
            <div class="col-md-3">
                <select name="statusFilter" class="form-select">
                    x
                    <option value="">Tüm Durumlar</option>
                    <option value="aktif" selected="@((string)ViewBag.StatusFilter == "aktif")">Aktif</option>
                    <option value="pasif" selected="@((string)ViewBag.StatusFilter == "pasif")">Pasif</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtrele</button>
            </div>
            <div class="col-md-3">
                <a href="/Employee/List" class="btn btn-secondary w-100">Temizle</a>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Durum</th>
            <th>Firma Id</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FirstName @emp.LastName</td>
                <td>@emp.Email</td>
                <td>@(emp.IsActive ? "Aktif" : "Pasif")</td>
                <td>@emp.CompanyId</td>
                <td>
                    <a href="/Employee/Detail/@emp.Id" class="btn btn-sm btn-primary me-1">Detay</a>
                    <a href="/Employee/Edit/@emp.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>
                    <a href="/Employee/Delete/@emp.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
