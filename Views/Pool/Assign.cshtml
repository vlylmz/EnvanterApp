@model WebApplication1.Models.Computer

<div class="card shadow-sm mt-4" style="max-width:480px;margin:auto;">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-user-plus"></i> Ürün Zimmetleme
    </div>
    <div class="card-body">

        <div class="mb-3">
            <label class="form-label fw-bold">Ürün Adı:</label>
            <div>@Model.Name</div>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Seri No:</label>
            <div>@Model.SerialNumber</div>
        </div>

        <form asp-action="Assign" asp-controller="Pool" method="post" class="mt-4">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label fw-bold">Zimmetlenecek Çalışan Adı</label>
                <input type="text" name="employeeName" class="form-control" placeholder="Çalışan adını girin" required />
            </div>
            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-check"></i> Zimmetle
                </button>
                <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
            </div>
        </form>

    </div>
</div>
