@model WebApplication1.ViewModels.ComputerDetailsViewModel

<h2>Bilgisayar Detayları</h2>

<table class="table">
    <tr>
        <th>Ad</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Açıklama</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Demirbaş No</th>
        <td>@Model.AssetTag</td>
    </tr>
    <tr>
        <th>Durum</th>
        <td>@Model.Status</td>
    </tr>
    <tr>
        <th>Aktif mi?</th>
        <td>@(Model.IsActive ? "Evet" : "Hayır")</td>
    </tr>
    <tr>
        <th>Satın Alım Tarihi</th>
        <td>@Model.PurchaseDate?.ToString("dd.MM.yyyy")</td>
    </tr>
</table>

<a href="@Url.Action("Index", "Pool")" class="btn btn-secondary">Geri Dön</a>
