@model WebApplication1.Models.Software
@{
    ViewData["Title"] = "Yazılım Lisansını Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string statusBadgeClass = Model.Status switch
    {
        SoftwareStatus.Active => "text-success",
        SoftwareStatus.Approaching => "text-warning",
        SoftwareStatus.Expired => "text-danger",
        _ => "text-secondary"
    };
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-compact-disc me-1"></i>Yazılım Lisansları
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                                    @Model.Name
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Düzenle</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-1 d-flex align-items-center">
                        <i class="fas fa-edit text-primary me-2" aria-hidden="true"></i>
                        Yazılım Lisansını Düzenle
                    </h1>
                    <p class="text-muted mb-0">
                        @Model.Name - @Model.Brand (#@Model.Id) bilgilerini güncelleyin
                    </p>
                </div>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-1" aria-hidden="true"></i> Detayları Görüntüle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1" aria-hidden="true"></i> Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <form asp-action="Edit" method="post" id="softwareEditForm" novalidate>
        <input asp-for="Id" type="hidden" />

        <div class="row">
            <!-- Left Column - Form Fields -->
            <div class="col-lg-8">
                <!-- Basic Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-info-circle me-2 text-primary" aria-hidden="true"></i>
                                Temel Bilgiler
                            </h5>
                            <span class="badge bg-danger">Zorunlu Alanlar</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name" class="form-label fw-semibold">
                                        <i class="fas fa-desktop text-muted me-1" aria-hidden="true"></i>
                                        Yazılım Adı <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" id="name"
                                        placeholder="Microsoft Office 365" required>
                                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yazılımın tam adını giriniz
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="brand" class="form-label fw-semibold">
                                        <i class="fas fa-tag text-muted me-1" aria-hidden="true"></i>
                                        Marka <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Brand" class="form-control form-control-lg" id="brand"
                                        placeholder="Microsoft" required>
                                    <span asp-validation-for="Brand" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-shield-alt me-1 text-success"></i>
                                        Yazılımın üretici markasını giriniz
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="description" class="form-label fw-semibold">
                                        <i class="fas fa-comment text-muted me-1" aria-hidden="true"></i>
                                        Açıklama
                                    </label>
                                    <input asp-for="Description" class="form-control form-control-lg" id="description"
                                        placeholder="Yazılım açıklaması ve kullanım amacı">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yazılımın kullanım amacı ve özelliklerini belirtiniz
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- License Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-key me-2 text-warning" aria-hidden="true"></i>
                                Lisans Bilgileri
                            </h5>
                            <span class="badge bg-warning">Lisans Detayları</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="licenseKey" class="form-label fw-semibold">
                                        <i class="fas fa-key text-muted me-1" aria-hidden="true"></i>
                                        Lisans Anahtarı
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="LicenseKey" class="form-control form-control-lg" id="licenseKey"
                                            placeholder="Lisans anahtarını girin">
                                        @if (!string.IsNullOrEmpty(Model.LicenseKey))
                                        {
                                            <button type="button" class="btn btn-outline-secondary"
                                                onclick="copyLicenseKey()" title="Kopyala">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        }
                                    </div>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yazılımın lisans anahtarını güvenli bir şekilde saklayın
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="duration" class="form-label fw-semibold">
                                        <i class="fas fa-clock text-muted me-1" aria-hidden="true"></i>
                                        Lisans Süresi <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Duration" class="form-select form-select-lg" id="duration"
                                        required>
                                        <option value="">Süre seçiniz...</option>
                                        <option value="1 Ay">1 Ay</option>
                                        <option value="3 Ay">3 Ay</option>
                                        <option value="6 Ay">6 Ay</option>
                                        <option value="1 Yıl">1 Yıl</option>
                                        <option value="2 Yıl">2 Yıl</option>
                                        <option value="3 Yıl">3 Yıl</option>
                                        <option value="5 Yıl">5 Yıl</option>
                                        <option value="Süresiz">Süresiz</option>
                                    </select>
                                    <span asp-validation-for="Duration" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Lisansın geçerlilik süresini seçiniz
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="expiryDate" class="form-label fw-semibold">
                                        <i class="fas fa-calendar-times text-muted me-1" aria-hidden="true"></i>
                                        Son Kullanma Tarihi
                                    </label>
                                    <input asp-for="ExpiryDate" type="date" class="form-control form-control-lg"
                                        id="expiryDate">
                                    <div class="form-text">
                                        <i class="fas fa-calendar me-1"></i>
                                        Mevcut: @Model.ExpiryDate.ToString("dd.MM.yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Assignment Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-users me-2 text-info" aria-hidden="true"></i>
                                Atama Bilgileri
                            </h5>
                            <span class="badge bg-secondary">İsteğe Bağlı</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="companyId" class="form-label fw-semibold">
                                        <i class="fas fa-building text-muted me-1" aria-hidden="true"></i>
                                        Bağlı Şirket
                                    </label>
                                    <select asp-for="CompanyId" class="form-select form-select-lg" id="companyId">
                                        <option value="">Şirket seçiniz...</option>
                                        @if (ViewBag.Companies != null)
                                        {
                                            @foreach (var company in ViewBag.Companies)
                                            {
                                                <option value="@company.Id"
                                                    selected="@(company.Id == Model.CompanyId ? "selected" : null)">
                                                    @company.Name</option>

                                            }
                                        }
                                    </select>
                                    @if (Model.Company != null)
                                    {
                                        <div class="form-text text-success">
                                            <i class="fas fa-check me-1"></i>
                                            Mevcut: @Model.Company.Name
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Yazılımın ait olduğu şirketi seçiniz
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="assignedEmployeeId" class="form-label fw-semibold">
                                        <i class="fas fa-user text-muted me-1" aria-hidden="true"></i>
                                        Atanan Çalışan
                                    </label>
                                    <select asp-for="AssignedEmployeeId" class="form-select form-select-lg"
                                        id="assignedEmployeeId">
                                        <option value="">Çalışan seçiniz...</option>
                                        @if (ViewBag.Employees != null)
                                        {
                                            @foreach (var employee in ViewBag.Employees)
                                            {
                                                <option value="@employee.Id"
                                                    selected="@(employee.Id == Model.AssignedEmployeeId ? "selected" : null)">
                                                    @employee.Name
                                                </option>

                                            }
                                        }
                                    </select>
                                    @if (Model.AssignedEmployee != null)
                                    {
                                        <div class="form-text text-success">
                                            <i class="fas fa-check me-1"></i>
                                            Mevcut: @Model.AssignedEmployee.FirstName @Model.AssignedEmployee.LastName
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Yazılımı kullanacak çalışanı seçiniz
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Actions & Info -->
            <div class="col-lg-4">
                <!-- Save Actions Card -->
                <div class="card mb-4 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-save me-2 text-primary" aria-hidden="true"></i>
                            Kaydetme İşlemleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-save me-2" aria-hidden="true"></i>
                                Değişiklikleri Kaydet
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                <i class="fas fa-undo me-2" aria-hidden="true"></i>
                                Formu Sıfırla
                            </button>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info w-100">
                                        <i class="fas fa-eye me-1" aria-hidden="true"></i>
                                        Detay
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-list me-1" aria-hidden="true"></i>
                                        Liste
                                    </a>
                                </div>
                            </div>
                            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete()">
                                <i class="fas fa-trash me-2" aria-hidden="true"></i>
                                Lisansı Sil
                            </button>
                        </div>

                        <div class="alert alert-info mt-3 mb-0">
                            <small class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-2"></i>
                                <span>
                                    Formu kaydetmeden önce tüm zorunlu alanların doldurulduğundan emin olun.
                                </span>
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Current Status Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-chart-pie me-2 text-success" aria-hidden="true"></i>
                            Mevcut Durum
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @switch (Model.Status)
                            {
                                case SoftwareStatus.Active:
                                    <div
                                        class="status-indicator bg-success bg-opacity-10 text-success border border-success rounded p-3">
                                        <i class="fas fa-check-circle fa-2x mb-2"></i>
                                        <h6 class="mb-1">Aktif Lisans</h6>
                                        <small>@Model.RemainingTime</small>
                                    </div>
                                    break;
                                case SoftwareStatus.Approaching:
                                    <div
                                        class="status-indicator bg-warning bg-opacity-10 text-warning border border-warning rounded p-3">
                                        <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                                        <h6 class="mb-1">Süresi Yaklaşıyor</h6>
                                        <small>@Model.RemainingTime</small>
                                    </div>
                                    break;
                                case SoftwareStatus.Expired:
                                    <div
                                        class="status-indicator bg-danger bg-opacity-10 text-danger border border-danger rounded p-3">
                                        <i class="fas fa-times-circle fa-2x mb-2"></i>
                                        <h6 class="mb-1">Süresi Dolmuş</h6>
                                        <small>@Model.RemainingTime</small>
                                    </div>
                                    break;
                            }
                        </div>

                        <div class="small text-muted">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Son Kullanma:</span>
                                <strong>@Model.ExpiryDate.ToString("dd.MM.yyyy")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Kalan Süre:</span>
                                <strong class="@statusBadgeClass">@Model.RemainingTime</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Software Statistics Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-info me-2 text-info" aria-hidden="true"></i>
                            Lisans İstatistikleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    <div class="h4 mb-1 text-primary">#@Model.Id</div>
                                    <small class="text-muted">Lisans ID</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    <div class="h4 mb-1 text-info">@((DateTime.Now - Model.CreatedDate).Days)</div>
                                    <small class="text-muted">Sistemde (Gün)</small>
                                </div>
                            </div>
                        </div>

                        <hr class="my-3">

                        <div class="small text-muted">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Oluşturulma:</span>
                                <strong>@Model.CreatedDate.ToString("dd.MM.yyyy")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Oluşturulma Saati:</span>
                                <strong>@Model.CreatedDate.ToString("HH:mm")</strong>
                            </div>
                            @if (Model.UpdatedDate.HasValue)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Son Güncelleme:</span>
                                    <strong>@Model.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")</strong>
                                </div>
                            }
                            <div class="d-flex justify-content-between">
                                <span>Şu Anki Güncelleme:</span>
                                <strong>@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Help & Guidelines Card -->
                <div class="card mb-4 shadow-sm border-start border-4 border-primary">
                    <div class="card-body">
                        <h6 class="card-title text-primary">
                            <i class="fas fa-lightbulb me-2"></i>
                            Form Rehberi
                        </h6>
                        <ul class="list-unstyled mb-0 small">
                            <li class="mb-2">
                                <i class="fas fa-asterisk text-danger me-2" style="font-size: 8px;"></i>
                                Kırmızı yıldız (*) işareti olan alanlar zorunludur
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-desktop text-primary me-2"></i>
                                Yazılım adı ve marka bilgileri doğru olmalıdır
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-key text-warning me-2"></i>
                                Lisans anahtarını güvenli bir şekilde saklayın
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-calendar text-info me-2"></i>
                                Son kullanma tarihini düzenli kontrol edin
                            </li>
                            <li>
                                <i class="fas fa-save text-success me-2"></i>
                                Değişiklikleri kaydetmeyi unutmayın
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function initializeForm() {
        var form = document.getElementById('softwareEditForm');
        var submitBtn = document.getElementById('submitBtn');

        if (form && submitBtn) {
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                var name = document.getElementById('name').value.trim();
                var brand = document.getElementById('brand').value.trim();
                var duration = document.getElementById('duration').value;

                var isValid = true;
                var errors = [];

                if (!name) {
                    errors.push('Yazılım adı zorunludur');
                    isValid = false;
                }

                if (!brand) {
                    errors.push('Marka bilgisi zorunludur');
                    isValid = false;
                }

                if (!duration) {
                    errors.push('Lisans süresi seçimi zorunludur');
                    isValid = false;
                }

                if (!isValid) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Form Hatası',
                        html: errors.join('<br>'),
                        confirmButtonText: 'Tamam'
                    });
                    return;
                }

                Swal.fire({
                    title: 'Değişiklikleri Kaydet?',
                    text: 'Yazılım lisans bilgileri güncellenecek.',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#0d6efd',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Evet, Kaydet',
                    cancelButtonText: 'İptal'
                }).then(function (result) {
                    if (result.isConfirmed) {
                        submitBtn.innerHTML = 'Kaydediliyor...';
                        submitBtn.disabled = true;
                        form.submit();
                    }
                });
            });
        }
    }

    function resetForm() {
        var form = document.getElementById('softwareEditForm');
        if (form) {
            Swal.fire({
                title: 'Formu Sıfırla?',
                text: 'Tüm değişiklikler kaybolacak.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#fd7e14',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Sıfırla',
                cancelButtonText: 'İptal'
            }).then(function (result) {
                if (result.isConfirmed) {
                    form.reset();
                    Swal.fire({
                        icon: 'success',
                        title: 'Form Sıfırlandı',
                        timer: 2000,
                        showConfirmButton: false,
                        toast: true,
                        position: 'top-end'
                    });
                }
            });
        }
    }

    function confirmDelete() {
        Swal.fire({
            title: 'Yazılım Lisansını Sil?',
            html: `<div class="text-center">
                <div class="mb-3">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                </div>
                <p><strong>@Model.Name</strong> yazılım lisansını silmek istediğinizden emin misiniz?</p>
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Uyarı:</strong> Bu işlem geri alınamaz!
                </div>
            </div>`,
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-trash me-2"></i>Evet, Sil!',
            cancelButtonText: '<i class="fas fa-times me-2"></i>İptal',
            reverseButtons: true,
            focusCancel: true,
            customClass: {
                popup: 'border-0 shadow-lg',
                confirmButton: 'btn-lg',
                cancelButton: 'btn-lg'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading
                Swal.fire({
                    title: 'Siliniyor...',
                    text: 'Yazılım lisansı siliniyor, lütfen bekleyin.',
                    icon: 'info',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                // Simulate delete request (replace with actual delete URL)
                setTimeout(() => {
                    window.location.href = `@Url.Action("Delete")/@Model.Id`;
                }, 1000);
            }
        });
    }

    function copyLicenseKey() {
        const licenseKeyInput = document.getElementById('licenseKey');
        const licenseKey = licenseKeyInput.value;

        if (licenseKey && navigator.clipboard) {
            navigator.clipboard.writeText(licenseKey).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Kopyalandı!',
                    text: 'Lisans anahtarı panoya kopyalandı.',
                    timer: 2000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            });
        } else if (licenseKey) {
            // Fallback for older browsers
            licenseKeyInput.select();
            document.execCommand('copy');
            Swal.fire({
                icon: 'success',
                title: 'Kopyalandı!',
                text: 'Lisans anahtarı panoya kopyalandı.',
                timer: 2000,
                showConfirmButton: false,
