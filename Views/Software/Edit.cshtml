@model Software

@{
    ViewBag.Title = "Yazılım Düzenle";
}

<h3>Yazılımı Düzenle</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Marka</label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label>Firma</label>
        <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Zimmetli Kişi</label>
        <select asp-for="AssignedEmployeeId" asp-items="ViewBag.Employees" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Satın Alma Tarihi</label>
        <input asp-for="PurchaseDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Lisans Bitişi</label>
        <input asp-for="ExpiryDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Software/Index" class="btn btn-secondary">Vazgeç</a>
</form>
