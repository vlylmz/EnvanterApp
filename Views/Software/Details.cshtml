@model Software

@{
    ViewBag.Title = "Yazılım Detay";
}

<h3>Yazılım Detay</h3>

<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Marka</th>
        <td>@Model.Brand</td>
    </tr>
    <tr>
        <th>Firma</th>
        <td>@Model.CompanyId</td>
    </tr>
    <tr>
        <th>Zimmetli Kişi</th>
        <td>@Model.AssignedEmployeeId</td>
    </tr>
    <tr>
        <th>Satın Alma Tarihi</th>
        <td>@Model.PurchaseDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Lisans Bitiş Tarihi</th>
        <td>@Model.ExpiryDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Durum</th>
        <td>@Model.Status</td>
    </tr>
</table>

<a href="/Software/Index" class="btn btn-secondary">Geri</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
