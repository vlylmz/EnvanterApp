@model WebApplication1.Models.Computer
@{
    ViewData["Title"] = "Bilgisayar Detayları";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.3/sweetalert2.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #6366f1;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --secondary-color: #6b7280;
        --light-bg: #f8fafc;
        --card-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        --card-shadow-hover: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #8b5cf6 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 1rem 1rem;
        box-shadow: var(--card-shadow);
    }

    .detail-card {
        background: white;
        border-radius: 1rem;
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        margin-bottom: 2rem;
        overflow: hidden;
    }

    .detail-card:hover {
        box-shadow: var(--card-shadow-hover);
        transition: box-shadow 0.3s ease;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 1.5rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .section-title {
        display: flex;
        align-items: center;
        margin: 0;
        font-weight: 600;
        color: #1f2937;
        font-size: 1.25rem;
    }

    .section-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--primary-color) 0%, #8b5cf6 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-right: 1rem;
        font-size: 1.1rem;
    }

    .detail-row {
        display: flex;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        transition: background-color 0.2s ease;
    }

    .detail-row:hover {
        background-color: #f8fafc;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 500;
        color: var(--secondary-color);
        min-width: 200px;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
    }

    .detail-label i {
        margin-right: 0.5rem;
        width: 16px;
    }

    .detail-value {
        color: #1f2937;
        font-weight: 400;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-badge {
        padding: 0.375rem 0.75rem;
        border-radius: 0.5rem;
        font-weight: 500;
        font-size: 0.75rem;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
    }

    .status-badge.bg-success {
        background-color: #dcfce7 !important;
        color: #166534 !important;
    }

    .status-badge.bg-warning {
        background-color: #fef3c7 !important;
        color: #92400e !important;
    }

    .status-badge.bg-danger {
        background-color: #fecaca !important;
        color: #991b1b !important;
    }

    .status-badge.bg-secondary {
        background-color: #f3f4f6 !important;
        color: #374151 !important;
    }

    .warranty-alert {
        padding: 1rem;
        border-radius: 0.75rem;
        margin: 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .warranty-expired {
        background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
        color: #991b1b;
        border: 1px solid #f87171;
    }

    .warranty-warning {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        color: #92400e;
        border: 1px solid #fbbf24;
    }

    .employee-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: white;
        font-size: 0.875rem;
        margin-right: 0.75rem;
    }

    .spec-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        padding: 1.5rem;
    }

    .spec-item {
        background: #f8fafc;
        border-radius: 0.75rem;
        padding: 1rem;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .spec-item:hover {
        background: white;
        box-shadow: var(--card-shadow);
    }

    .spec-icon {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
        font-size: 1rem;
    }

    .spec-icon.processor { background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; }
    .spec-icon.memory { background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; }
    .spec-icon.storage { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; }
    .spec-icon.graphics { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; }

    .spec-title {
        font-weight: 600;
        color: #1f2937;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .spec-value {
        color: var(--secondary-color);
        font-size: 0.875rem;
    }

    .action-buttons {
        background: white;
        border-radius: 0 0 1rem 1rem;
        padding: 1.5rem;
        border-top: 2px solid #f1f5f9;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        border-radius: 0.75rem;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.2s ease;
        border: 2px solid transparent;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, #8b5cf6 100%);
        color: white;
        box-shadow: var(--card-shadow);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: var(--card-shadow-hover);
        color: white;
    }

    .btn-outline-secondary {
        border-color: #d1d5db;
        color: var(--secondary-color);
        background: white;
    }

    .btn-outline-secondary:hover {
        background: #f9fafb;
        border-color: var(--secondary-color);
        color: var(--secondary-color);
        transform: translateY(-1px);
    }

    .btn-warning {
        background: linear-gradient(135deg, var(--warning-color) 0%, #d97706 100%);
        color: white;
        box-shadow: var(--card-shadow);
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: var(--card-shadow-hover);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);
        color: white;
        box-shadow: var(--card-shadow);
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: var(--card-shadow-hover);
        color: white;
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .empty-value {
        color: #9ca3af;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .detail-row {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .detail-label {
            min-width: auto;
            font-weight: 600;
        }
        
        .action-buttons {
            flex-direction: column;
            gap: 1rem;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<!-- Sayfa Başlığı -->
<div class="page-header fade-in">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-2">
                    <i class="fas fa-desktop me-2"></i>
                    @Model.Name
                </h1>
                <p class="mb-0 opacity-75">Bilgisayar detay bilgileri ve teknik özellikler</p>
            </div>
            <div class="d-flex gap-2">
                @if (Model.Status == ComputerStatus.Aktif)
                {
                    <span class="status-badge bg-success">
                        <i class="fas fa-circle"></i>
                        Aktif
                    </span>
                }
                else if (Model.Status == ComputerStatus.Bakim)
                {
                    <span class="status-badge bg-warning">
                        <i class="fas fa-tools"></i>
                        Bakımda
                    </span>
                }
                else if (Model.Status == ComputerStatus.Arızalı || Model.Status == ComputerStatus.Bozuk)
                {
                    <span class="status-badge bg-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        @Model.Status
                    </span>
                }
                else
                {
                    <span class="status-badge bg-secondary">
                        <i class="fas fa-circle"></i>
                        @Model.Status
                    </span>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Temel Bilgiler -->
    <div class="detail-card fade-in">
        <div class="card-header-custom">
            <h3 class="section-title">
                <div class="section-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                Temel Bilgiler
            </h3>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-tag"></i>
                Varlık Etiketi
            </div>
            <div class="detail-value">@Model.AssetTag</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-barcode"></i>
                Seri Numarası
            </div>
            <div class="detail-value">@Model.SerialNumber</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-laptop"></i>
                Marka / Model
            </div>
            <div class="detail-value">
                @if (!string.IsNullOrEmpty(Model.Brand) || !string.IsNullOrEmpty(Model.Model))
                {
                    <span>@Model.Brand @Model.Model</span>
                }
                else
                {
                    <span class="empty-value">Belirtilmemiş</span>
                }
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fab fa-windows"></i>
                İşletim Sistemi
            </div>
            <div class="detail-value">
                @if (!string.IsNullOrEmpty(Model.OperatingSystem))
                {
                    <span>@Model.OperatingSystem</span>
                }
                else
                {
                    <span class="empty-value">Belirtilmemiş</span>
                }
            </div>
        </div>
    </div>

    <!-- Firma ve Çalışan Bilgileri -->
    <div class="detail-card fade-in">
        <div class="card-header-custom">
            <h3 class="section-title">
                <div class="section-icon">
                    <i class="fas fa-users"></i>
                </div>
                Firma & Çalışan
            </h3>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-building"></i>
                Firma
            </div>
            <div class="detail-value">
                @if (Model.Company != null)
                {
                    <span>@Model.Company.Name</span>
                }
                else
                {
                    <span class="empty-value">Firma atanmamış</span>
                }
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-user"></i>
                Zimmetli Çalışan
            </div>
            <div class="detail-value">
                @if (Model.AssignedEmployee != null)
                {
                    <div class="d-flex align-items-center">
                        <div class="employee-avatar bg-primary">
                            @(Model.AssignedEmployee.FirstName?.Substring(0, 1).ToUpper())@(Model.AssignedEmployee.LastName?.Substring(0, 1).ToUpper())
                        </div>
                        <span>@Model.AssignedEmployee.FirstName @Model.AssignedEmployee.LastName</span>
                    </div>
                }
                else
                {
                    <span class="empty-value">
                        <i class="fas fa-user-slash me-2"></i>
                        Çalışan atanmamış
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Teknik Özellikler -->
    @if (!string.IsNullOrEmpty(Model.ProcessorName) || Model.RamAmount.HasValue || Model.StorageSize.HasValue || !string.IsNullOrEmpty(Model.GraphicsCard))
    {
        <div class="detail-card fade-in">
            <div class="card-header-custom">
                <h3 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-microchip"></i>
                    </div>
                    Teknik Özellikler
                </h3>
            </div>
            
            <div class="spec-grid">
                @if (!string.IsNullOrEmpty(Model.ProcessorName))
                {
                    <div class="spec-item">
                        <div class="spec-icon processor">
                            <i class="fas fa-microchip"></i>
                        </div>
                        <div class="spec-title">İşlemci</div>
                        <div class="spec-value">
                            @Model.ProcessorName
                            @if (!string.IsNullOrEmpty(Model.ProcessorSpeed))
                            {
                                <br><small>@Model.ProcessorSpeed</small>
                            }
                            @if (Model.ProcessorCores.HasValue)
                            {
                                <br><small>@Model.ProcessorCores Çekirdek</small>
                            }
                        </div>
                    </div>
                }
                
                @if (Model.RamAmount.HasValue)
                {
                    <div class="spec-item">
                        <div class="spec-icon memory">
                            <i class="fas fa-memory"></i>
                        </div>
                        <div class="spec-title">Bellek (RAM)</div>
                        <div class="spec-value">
                            @Model.RamAmount GB
                            @if (!string.IsNullOrEmpty(Model.RamType))
                            {
                                <span>@Model.RamType</span>
                            }
                            @if (Model.RamSpeed.HasValue)
                            {
                                <br><small>@Model.RamSpeed MHz</small>
                            }
                        </div>
                    </div>
                }
                
                @if (Model.StorageSize.HasValue)
                {
                    <div class="spec-item">
                        <div class="spec-icon storage">
                            <i class="fas fa-hdd"></i>
                        </div>
                        <div class="spec-title">Depolama</div>
                        <div class="spec-value">
                            @Model.StorageSize GB
                            @if (Model.StorageType.HasValue)
                            {
                                <br><small>@Model.StorageType</small>
                            }
                        </div>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.GraphicsCard))
                {
                    <div class="spec-item">
                        <div class="spec-icon graphics">
                            <i class="fas fa-display"></i>
                        </div>
                        <div class="spec-title">Ekran Kartı</div>
                        <div class="spec-value">@Model.GraphicsCard</div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Satın Alma ve Garanti Bilgileri -->
    @if (Model.PurchaseDate.HasValue || Model.WarrantyEndDate.HasValue)
    {
        <div class="detail-card fade-in">
            <div class="card-header-custom">
                <h3 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    Satın Alma & Garanti
                </h3>
            </div>
            
            @if (Model.PurchaseDate.HasValue)
            {
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-shopping-cart"></i>
                        Satın Alma Tarihi
                    </div>
                    <div class="detail-value">@Model.PurchaseDate?.ToString("dd.MM.yyyy")</div>
                </div>
            }
            
            @if (Model.WarrantyEndDate.HasValue)
            {
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-shield-alt"></i>
                        Garanti Bitiş Tarihi
                    </div>
                    <div class="detail-value">
                        <div>
                            @Model.WarrantyEndDate?.ToString("dd.MM.yyyy")
                            
                            @if (Model.IsWarrantyExpired)
                            {
                                <div class="warranty-alert warranty-expired">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <span>Garanti süresi dolmuş</span>
                                </div>
                            }
                            else if (Model.WarrantyDaysRemaining <= 30)
                            {
                                <div class="warranty-alert warranty-warning">
                                    <i class="fas fa-clock"></i>
                                    <span>Garanti @Model.WarrantyDaysRemaining gün içinde dolacak</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Açıklama -->
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="detail-card fade-in">
            <div class="card-header-custom">
                <h3 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-sticky-note"></i>
                    </div>
                    Notlar ve Açıklamalar
                </h3>
            </div>
            
            <div class="detail-row">
                <div class="detail-value" style="min-width: 100%;">
                    <p class="mb-0" style="white-space: pre-line;">@Model.Description</p>
                </div>
            </div>
        </div>
    }

    <!-- Sistem Bilgileri -->
    <div class="detail-card fade-in">
        <div class="card-header-custom">
            <h3 class="section-title">
                <div class="section-icon">
                    <i class="fas fa-cog"></i>
                </div>
                Sistem Bilgileri
            </h3>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-plus-circle"></i>
                Kayıt Tarihi
            </div>
            <div class="detail-value">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
        </div>
        
        @if (Model.LastUpdatedDate.HasValue)
        {
            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-edit"></i>
                    Son Güncelleme
                </div>
                <div class="detail-value">
                    @Model.LastUpdatedDate?.ToString("dd.MM.yyyy HH:mm")
                    @if (!string.IsNullOrEmpty(Model.LastUpdatedBy))
                    {
                        <small class="text-muted">(@Model.LastUpdatedBy)</small>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Action Buttons -->
    <div class="detail-card fade-in">
        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i>
                Geri Dön
            </a>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i>
                    Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger delete-btn">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.3/sweetalert2.min.js"></script>
    <script>
        // Silme işlemi için SweetAlert
        document.querySelector('.delete-btn')?.addEventListener('click', function(e) {
            e.preventDefault();
            const deleteUrl = this.href;
            
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu bilgisayarı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'İptal',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = deleteUrl;
                }
            });
        });

        // Garanti uyarısı animasyonu
        document.querySelectorAll('.warranty-alert').forEach(alert => {
            alert.style.animation = 'pulse 2s infinite';
        });

        // CSS animasyon tanımı
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes pulse {
                0%, 100% { opacity: 1; }
                50% { opacity: 0.8; }
            }
        `;
        document.head.appendChild(style);
    </script>
}