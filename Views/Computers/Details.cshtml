@model WebApplication1.Models.Computer

@{
    ViewData["Title"] = "Bilgisayar Detayları";
    ViewBag.Title = "Bilgisayar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Bilgisayarlar</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body bg-gradient-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="avatar-circle">
                                <i class="fas fa-desktop fa-3x"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h2 class="mb-1">@Model.Name</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-laptop me-2"></i>@(Model.Brand + " " + Model.Model ?? "Bilgisayar Detayları")
                            </p>
                            <small class="opacity-75">
                                <i class="fas fa-calendar me-1"></i>
                                Kayıt Tarihi: @Model.CreatedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                            </small>
                        </div>
                        <div class="col-md-2 text-center">
                            @if (Model.Status == ComputerStatus.Aktif)
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else if (Model.Status == ComputerStatus.Bakim)
                            {
                                <span class="badge bg-warning fs-6 px-3 py-2">
                                    <i class="fas fa-tools me-1"></i>Bakımda
                                </span>
                            }
                            else if (Model.Status == ComputerStatus.Arızalı || Model.Status == ComputerStatus.Bozuk)
                            {
                                <span class="badge bg-danger fs-6 px-3 py-2">
                                    <i class="fas fa-exclamation-triangle me-1"></i>@Model.Status
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6 px-3 py-2">
                                    <i class="fas fa-circle me-1"></i>@Model.Status
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column - Computer Information -->
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Temel Bilgiler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-tag text-muted me-2"></i>Varlık Etiketi
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-light text-dark">#@Model.AssetTag</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-barcode text-muted me-2"></i>Seri Numarası
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.SerialNumber))
                                    {
                                        <span>@Model.SerialNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fab fa-windows text-muted me-2"></i>İşletim Sistemi
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.OperatingSystem))
                                    {
                                        <span>@Model.OperatingSystem</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-signal text-muted me-2"></i>Durum
                                </label>
                                <div class="info-value">
                                    @if (Model.Status == ComputerStatus.Aktif)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>Aktif
                                        </span>
                                    }
                                    else if (Model.Status == ComputerStatus.Bakim)
                                    {
                                        <span class="text-warning fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>Bakımda
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">
                                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>@Model.Status
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technical Specifications -->
            @if (!string.IsNullOrEmpty(Model.ProcessorName) || Model.RamAmount.HasValue || Model.StorageSize.HasValue || !string.IsNullOrEmpty(Model.GraphicsCard))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-microchip text-primary me-2"></i>
                            Teknik Özellikler
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (!string.IsNullOrEmpty(Model.ProcessorName))
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-microchip text-muted me-2"></i>İşlemci
                                        </label>
                                        <div class="info-value">
                                            <div>@Model.ProcessorName</div>
                                            @if (!string.IsNullOrEmpty(Model.ProcessorSpeed))
                                            {
                                                <small class="text-muted">@Model.ProcessorSpeed</small>
                                            }
                                            @if (Model.ProcessorCores.HasValue)
                                            {
                                                <small class="text-muted d-block">@Model.ProcessorCores Çekirdek</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.RamAmount.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-memory text-muted me-2"></i>Bellek (RAM)
                                        </label>
                                        <div class="info-value">
                                            <div>@Model.RamAmount GB @Model.RamType</div>
                                            @if (Model.RamSpeed.HasValue)
                                            {
                                                <small class="text-muted">@Model.RamSpeed MHz</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.StorageSize.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-hdd text-muted me-2"></i>Depolama
                                        </label>
                                        <div class="info-value">
                                            <div>@Model.StorageSize GB</div>
                                            @if (Model.StorageType.HasValue)
                                            {
                                                <small class="text-muted">@Model.StorageType</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.GraphicsCard))
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-display text-muted me-2"></i>Ekran Kartı
                                        </label>
                                        <div class="info-value">@Model.GraphicsCard</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Company and Employee Information -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-users text-primary me-2"></i>
                        Firma & Zimmet Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-building text-muted me-2"></i>Firma
                                </label>
                                <div class="info-value">
                                    @if (Model.Company != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="company-icon me-3">
                                                <i class="fas fa-building fa-lg text-primary"></i>
                                            </div>
                                            <span>@Model.Company.Name</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Firma atanmamış</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user text-muted me-2"></i>Zimmetli Çalışan
                                </label>
                                <div class="info-value">
                                    @if (Model.AssignedEmployee != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="employee-avatar me-3">
                                                @(Model.AssignedEmployee.FirstName?.Substring(0, 1).ToUpper())@(Model.AssignedEmployee.LastName?.Substring(0, 1).ToUpper())
                                            </div>
                                            <span>@Model.AssignedEmployee.FirstName @Model.AssignedEmployee.LastName</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-user-slash me-2"></i>
                                            Çalışan atanmamış
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Purchase and Warranty Information -->
            @if (Model.PurchaseDate.HasValue || Model.WarrantyEndDate.HasValue)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            Satın Alma & Garanti
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (Model.PurchaseDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-shopping-cart text-muted me-2"></i>Satın Alma Tarihi
                                        </label>
                                        <div class="info-value">@Model.PurchaseDate?.ToString("dd.MM.yyyy")</div>
                                    </div>
                                </div>
                            }
                            @if (Model.WarrantyEndDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="info-label">
                                            <i class="fas fa-shield-alt text-muted me-2"></i>Garanti Durumu
                                        </label>
                                        <div class="info-value">
                                            <div>@Model.WarrantyEndDate?.ToString("dd.MM.yyyy")</div>
                                            @if (Model.IsWarrantyExpired)
                                            {
                                                <span class="badge bg-danger mt-2">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Garanti Dolmuş
                                                </span>
                                            }
                                            else if (Model.WarrantyDaysRemaining <= 30)
                                            {
                                                <span class="badge bg-warning mt-2">
                                                    <i class="fas fa-clock me-1"></i>@Model.WarrantyDaysRemaining Gün Kaldı
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success mt-2">
                                                    <i class="fas fa-check me-1"></i>Geçerli
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-sticky-note text-primary me-2"></i>
                            Notlar ve Açıklamalar
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <div class="info-value">
                                <p class="mb-0" style="white-space: pre-line;">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Quick Actions & Statistics -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit me-2"></i>Düzenle
                        </a>

                        @if (Model.AssignedEmployee != null && !string.IsNullOrEmpty(Model.AssignedEmployee.Email))
                        {
                            <a href="mailto:@Model.AssignedEmployee.Email" class="btn btn-outline-primary">
                                <i class="fas fa-envelope me-2"></i>Çalışana E-posta
                            </a>
                        }

                        @if (Model.AssignedEmployee != null && !string.IsNullOrEmpty(Model.AssignedEmployee.Phone))
                        {
                            <a href="tel:@Model.AssignedEmployee.Phone" class="btn btn-outline-success">
                                <i class="fas fa-phone me-2"></i>Çalışanı Ara
                            </a>
                        }

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Sil
                        </button>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar text-primary me-2"></i>
                        İstatistikler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-primary mb-0">@((DateTime.Now - Model.CreatedDate).Days)</h4>
                                <small class="text-muted">Gün Önce Eklendi</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <h4 class="text-success mb-0">
                                    @(Model.Status == ComputerStatus.Aktif ? "✓" : "✗")
                                </h4>
                                <small class="text-muted">Durum</small>
                            </div>
                        </div>
                        @if (Model.WarrantyEndDate.HasValue)
                        {
                            <div class="col-6">
                                <div class="stat-item">
                                    <h4 class="@(Model.IsWarrantyExpired ? "text-danger" : "text-warning") mb-0">
                                        @(Model.IsWarrantyExpired ? "0" : Model.WarrantyDaysRemaining.ToString())
                                    </h4>
                                    <small class="text-muted">Garanti Günü</small>
                                </div>
                            </div>
                        }
                        @if (Model.PurchaseDate.HasValue)
                        {
                            <div class="col-6">
                                <div class="stat-item">
                                    <h4 class="text-info mb-0">@((DateTime.Now - Model.PurchaseDate.Value).Days / 365)</h4>
                                    <small class="text-muted">Yaşı (Yıl)</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- System Activity Log -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-history text-primary me-2"></i>
                        Sistem Aktiviteleri
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="timeline-logs px-3 py-2">
                        <div class="log-entry border-bottom pb-2 mb-2">
                            <div class="fw-bold">Sistem kaydı oluşturuldu</div>
                            <div class="text-muted small">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                        @if (Model.LastUpdatedDate.HasValue)
                        {
                            <div class="log-entry border-bottom pb-2 mb-2">
                                <div class="fw-bold">Bilgiler güncellendi</div>
                                <div class="text-muted small">@Model.LastUpdatedDate?.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                        }
                        @if (Model.AssignedEmployee != null)
                        {
                            <div class="log-entry border-bottom pb-2 mb-2">
                                <div class="fw-bold">Çalışan zimmetlendi</div>
                                <div class="text-muted small">@Model.AssignedEmployee.FirstName @Model.AssignedEmployee.LastName</div>
                            </div>
                        }
                        @if (Model.PurchaseDate.HasValue)
                        {
                            <div class="log-entry border-bottom pb-2 mb-2">
                                <div class="fw-bold">Satın alma kaydedildi</div>
                                <div class="text-muted small">@Model.PurchaseDate?.ToString("dd.MM.yyyy")</div>
                            </div>
                        }
                        <div class="log-entry pb-2 mb-2">
                            <div class="fw-bold">Durum: @Model.Status</div>
                            <div class="text-muted small">Mevcut durum</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Bilgisayar Listesi
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg me-2">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <button type="button" class="btn btn-outline-danger btn-lg" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Bilgisayarı Sil
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>@Model.Name</strong> adlı bilgisayarı silmek istediğinizden emin misiniz?</p>
                <p class="text-muted">Bu işlem geri alınamaz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .info-item {
        padding: 15px;
        border-radius: 8px;
        background: #f8f9fa;
        height: 100%;
    }

    .info-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 8px;
        display: block;
    }

    .info-value {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }

    .timeline-logs {
        max-height: 208px;
        overflow-y: auto;
        background: #f7fafc;
        border-radius: 0 0 12px 12px;
    }

    .timeline-logs::-webkit-scrollbar {
        width: 10px;
        background: #e2e8f0;
        border-radius: 10px;
    }

    .timeline-logs::-webkit-scrollbar-thumb {
        background: linear-gradient(160deg, #007bff 30%, #54a0ff 100%);
        border-radius: 10px;
    }

    .timeline-logs::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(180deg, #0056b3, #007bff);
    }

    .log-entry:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .log-entry {
        transition: background 0.2s;
    }

    .log-entry:hover {
        background: #e3ebf6;
    }

    .stat-item {
        padding: 10px;
    }

    .company-icon {
        width: 40px;
        height: 40px;
        background: #f8f9fa;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .employee-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: white;
        font-size: 0.875rem;
    }
</style>