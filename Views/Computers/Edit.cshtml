@model WebApplication1.Models.Computer
@{
    ViewData["Title"] = "Bilgisayar Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var companies = ViewBag.Companies as List<SelectListItem> ?? new List<SelectListItem>();
    var employees = ViewBag.Employees as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-desktop me-1"></i>Bilgisayarlar
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                                    @Model.Name
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Düzenle</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-1 d-flex align-items-center">
                        <i class="fas fa-desktop-edit text-success me-2" aria-hidden="true"></i>
                        Bilgisayar Bilgilerini Düzenle
                    </h1>
                    <p class="text-muted mb-0">
                        @Model.Name (#@Model.Id) bilgilerini güncelleyin
                    </p>
                </div>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-1" aria-hidden="true"></i> Detayları Görüntüle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1" aria-hidden="true"></i> Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <form asp-action="Edit" method="post" id="computerEditForm" novalidate>
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedDate" type="hidden" />
        
        <div class="row">
            <!-- Left Column - Form Fields -->
            <div class="col-lg-8">
                <!-- Basic Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-desktop me-2 text-primary" aria-hidden="true"></i> 
                                Temel Bilgiler
                            </h5>
                            <span class="badge bg-danger">Zorunlu Alanlar</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name" class="form-label fw-semibold">
                                        <i class="fas fa-desktop text-muted me-1" aria-hidden="true"></i>
                                        Bilgisayar Adı <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg"
                                           id="name" placeholder="DELL-PC-001" required>
                                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın sistem adını giriniz
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="assetTag" class="form-label fw-semibold">
                                        <i class="fas fa-tag text-muted me-1" aria-hidden="true"></i>
                                        Varlık Etiketi <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="AssetTag" class="form-control form-control-lg"
                                           id="assetTag" placeholder="AST-2024-001" required>
                                    <span asp-validation-for="AssetTag" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas-shield-alt me-1 text-success"></i>
                                        Benzersiz varlık etiketi kodu
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="serialNumber" class="form-label fw-semibold">
                                        <i class="fas fa-barcode text-muted me-1" aria-hidden="true"></i>
                                        Seri Numarası <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="SerialNumber" class="form-control form-control-lg"
                                           id="serialNumber" placeholder="Üreticinin seri numarası" required>
                                    <span asp-validation-for="SerialNumber" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Üretici tarafından verilen seri numarası
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="status" class="form-label fw-semibold">
                                        <i class="fas fa-circle text-muted me-1" aria-hidden="true"></i>
                                        Durum <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<ComputerStatus>()" 
                                            class="form-select form-select-lg" id="status" required>
                                        <option value="">Durum seçiniz...</option>
                                    </select>
                                    <span asp-validation-for="Status" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın mevcut çalışma durumu
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="brand" class="form-label fw-semibold">
                                        <i class="fas fa-trademark text-muted me-1" aria-hidden="true"></i>
                                        Marka
                                    </label>
                                    <input asp-for="Brand" class="form-control form-control-lg"
                                           id="brand" placeholder="Dell, HP, Lenovo">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın üretici markası
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="model" class="form-label fw-semibold">
                                        <i class="fas fa-laptop text-muted me-1" aria-hidden="true"></i>
                                        Model
                                    </label>
                                    <input asp-for="Model" class="form-control form-control-lg"
                                           id="model" placeholder="OptiPlex 7090">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın model adı
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="operatingSystem" class="form-label fw-semibold">
                                        <i class="fab fa-windows text-muted me-1" aria-hidden="true"></i>
                                        İşletim Sistemi
                                    </label>
                                    <input asp-for="OperatingSystem" class="form-control form-control-lg"
                                           id="operatingSystem" placeholder="Windows 11 Pro">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Yüklü işletim sistemi
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Company & Employee Assignment Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-users me-2 text-info" aria-hidden="true"></i> 
                                Firma ve Zimmet Bilgileri
                            </h5>
                            <span class="badge bg-danger">Firma Zorunlu</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="companyId" class="form-label fw-semibold">
                                        <i class="fas fa-building text-muted me-1" aria-hidden="true"></i>
                                        Bağlı Firma <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="CompanyId" asp-items="companies" 
                                            class="form-select form-select-lg" id="companyId" required>
                                        <option value="">Firma seçiniz...</option>
                                    </select>
                                    <span asp-validation-for="CompanyId" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın ait olduğu firmayı seçiniz
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="assignedEmployeeId" class="form-label fw-semibold">
                                        <i class="fas fa-user text-muted me-1" aria-hidden="true"></i>
                                        Zimmetli Çalışan
                                    </label>
                                    <select asp-for="AssignedEmployeeId" asp-items="employees" 
                                            class="form-select form-select-lg" id="assignedEmployeeId">
                                        <option value="">Çalışan seçiniz...</option>
                                    </select>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarı kullanan çalışanı seçiniz (isteğe bağlı)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hardware Specifications Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="fas fa-microchip me-2 text-success" aria-hidden="true"></i> 
                                Donanım Özellikleri
                            </h5>
                            <span class="badge bg-secondary">İsteğe Bağlı</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Processor Information -->
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="processorName" class="form-label fw-semibold">
                                        <i class="fas fa-microchip text-muted me-1" aria-hidden="true"></i>
                                        İşlemci Adı
                                    </label>
                                    <input asp-for="ProcessorName" class="form-control form-control-lg"
                                           id="processorName" placeholder="Intel Core i7-12700">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın işlemci model adı
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="processorSpeed" class="form-label fw-semibold">
                                        <i class="fas fa-tachometer-alt text-muted me-1" aria-hidden="true"></i>
                                        İşlemci Hızı
                                    </label>
                                    <input asp-for="ProcessorSpeed" class="form-control form-control-lg"
                                           id="processorSpeed" placeholder="2.1 GHz">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Base clock hızı
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="processorCores" class="form-label fw-semibold">
                                        <i class="fas fa-sitemap text-muted me-1" aria-hidden="true"></i>
                                        Çekirdek Sayısı
                                    </label>
                                    <input asp-for="ProcessorCores" type="number" class="form-control form-control-lg"
                                           id="processorCores" placeholder="8" min="1" max="128">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Fiziksel çekirdek sayısı
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Memory Information -->
                        <div class="row g-4 mt-2">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="ramAmount" class="form-label fw-semibold">
                                        <i class="fas fa-memory text-muted me-1" aria-hidden="true"></i>
                                        RAM Miktarı (GB)
                                    </label>
                                    <input asp-for="RamAmount" type="number" class="form-control form-control-lg"
                                           id="ramAmount" placeholder="16" min="1" max="1024">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Toplam sistem belleği
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="ramType" class="form-label fw-semibold">
                                        <i class="fas fa-memory text-muted me-1" aria-hidden="true"></i>
                                        RAM Tipi
                                    </label>
                                    <input asp-for="RamType" class="form-control form-control-lg"
                                           id="ramType" placeholder="DDR4, DDR5">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bellek teknolojisi
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="ramSpeed" class="form-label fw-semibold">
                                        <i class="fas fa-bolt text-muted me-1" aria-hidden="true"></i>
                                        RAM Hızı (MHz)
                                    </label>
                                    <input asp-for="RamSpeed" type="number" class="form-control form-control-lg"
                                           id="ramSpeed" placeholder="3200" min="800" max="8000">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bellek çalışma frekansı
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Storage & Graphics -->
                        <div class="row g-4 mt-2">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="storageType" class="form-label fw-semibold">
                                        <i class="fas fa-hdd text-muted me-1" aria-hidden="true"></i>
                                        Depolama Tipi
                                    </label>
                                    <select asp-for="StorageType" asp-items="Html.GetEnumSelectList<StorageType>()" 
                                            class="form-select form-select-lg" id="storageType">
                                        <option value="">Tip seçiniz...</option>
                                    </select>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Depolama teknolojisi
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="storageSize" class="form-label fw-semibold">
                                        <i class="fas fa-database text-muted me-1" aria-hidden="true"></i>
                                        Depolama Boyutu (GB)
                                    </label>
                                    <input asp-for="StorageSize" type="number" class="form-control form-control-lg"
                                           id="storageSize" placeholder="512" min="1" max="10000">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Toplam depolama kapasitesi
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="graphicsCard" class="form-label fw-semibold">
                                        <i class="fas fa-display text-muted me-1" aria-hidden="true"></i>
                                        Ekran Kartı
                                    </label>
                                    <input asp-for="GraphicsCard" class="form-control form-control-lg"
                                           id="graphicsCard" placeholder="NVIDIA GeForce RTX 3060">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Grafik işlemci model adı
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Purchase & Warranty Information Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-calendar-alt me-2 text-warning" aria-hidden="true"></i> 
                            Satın Alma ve Garanti Bilgileri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="purchaseDate" class="form-label fw-semibold">
                                        <i class="fas fa-shopping-cart text-muted me-1" aria-hidden="true"></i>
                                        Satın Alma Tarihi
                                    </label>
                                    <input asp-for="PurchaseDate" type="date" class="form-control form-control-lg"
                                           id="purchaseDate">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Bilgisayarın satın alındığı tarih
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="warrantyEndDate" class="form-label fw-semibold">
                                        <i class="fas fa-shield-alt text-muted me-1" aria-hidden="true"></i>
                                        Garanti Bitiş Tarihi
                                    </label>
                                    <input asp-for="WarrantyEndDate" type="date" class="form-control form-control-lg"
                                           id="warrantyEndDate">
                                    @if (Model.WarrantyEndDate.HasValue)
                                    {
                                        @if (Model.IsWarrantyExpired)
                                        {
                                            <div class="form-text text-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>
                                                Garanti süresi dolmuş
                                            </div>
                                        }
                                        else if (Model.WarrantyDaysRemaining <= 30)
                                        {
                                            <div class="form-text text-warning">
                                                <i class="fas fa-clock me-1"></i>
                                                Garanti @Model.WarrantyDaysRemaining gün içinde dolacak
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-text text-success">
                                                <i class="fas fa-check me-1"></i>
                                                Garanti geçerli
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Garanti bitiş tarihi
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-sticky-note me-2 text-secondary" aria-hidden="true"></i> 
                            Notlar ve Açıklamalar
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="description" class="form-label fw-semibold">
                                <i class="fas fa-clipboard text-muted me-1" aria-hidden="true"></i>
                                Açıklama ve Notlar
                            </label>
                            <textarea asp-for="Description" class="form-control form-control-lg" rows="4"
                                      id="description" placeholder="Bilgisayar hakkında ek bilgiler, özel durumlar, notlar..."></textarea>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Bilgisayar hakkında önemli notları ve özel durumları belirtiniz
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Actions & Info -->
            <div class="col-lg-4">
                <!-- Save Actions Card -->
                <div class="card mb-4 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-save me-2 text-primary" aria-hidden="true"></i> 
                            Kaydetme İşlemleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                <i class="fas fa-save me-2" aria-hidden="true"></i>
                                Değişiklikleri Kaydet
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                <i class="fas fa-undo me-2" aria-hidden="true"></i>
                                Formu Sıfırla
                            </button>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info w-100">
                                        <i class="fas fa-eye me-1" aria-hidden="true"></i>
                                        Detay
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-list me-1" aria-hidden="true"></i>
                                        Liste
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info mt-3 mb-0">
                            <small class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-2"></i>
                                <span>
                                    Formu kaydetmeden önce tüm zorunlu alanların doldurulduğundan emin olun.
                                </span>
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Computer Statistics Card -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-chart-pie me-2 text-success" aria-hidden="true"></i> 
                            Bilgisayar İstatistikleri
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    <div class="h4 mb-1 text-primary">#@Model.Id</div>
                                    <small class="text-muted">Bilgisayar ID</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    <div class="h4 mb-1 text-info">@((DateTime.Now - Model.CreatedDate).Days)</div>
                                    <small class="text-muted">Sistemde (Gün)</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    @if (Model.Status == ComputerStatus.Aktif)
                                    {
                                        <div class="badge bg-success fs-6 px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Aktif
                                        </div>
                                    }
                                    else if (Model.Status == ComputerStatus.Bakim)
                                    {
                                        <div class="badge bg-warning fs-6 px-3 py-2">
                                            <i class="fas fa-tools me-1"></i>
                                            Bakımda
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="badge bg-danger fs-6 px-3 py-2">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            @Model.Status
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item p-2 bg-light rounded">
                                    @if (Model.WarrantyEndDate.HasValue)
                                    {
                                        @if (Model.IsWarrantyExpired)
                                        {
