<script>
    function initializeForm() {
        var form = document.getElementById('computerEditForm');
        var submitBtn = document.getElementById('submitBtn');

        if (form && submitBtn) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                var name = document.getElementById('name').value.trim();
                var assetTag = document.getElementById('assetTag').value.trim();
                var serialNumber = document.getElementById('serialNumber').value.trim();
                var status = document.getElementById('status').value;
                var companyId = document.getElementById('companyId').value;

                var isValid = true;
                var errors = [];

                if (!name) {
                    errors.push('Bilgisayar adı zorunludur');
                    isValid = false;
                }

                if (!assetTag) {
                    errors.push('Varlık etiketi zorunludur');
                    isValid = false;
                }

                if (!serialNumber) {
                    errors.push('Seri numarası zorunludur');
                    isValid = false;
                }

                if (!status) {
                    errors.push('Durum seçimi zorunludur');
                    isValid = false;
                }

                if (!companyId) {
                    errors.push('Firma seçimi zorunludur');
                    isValid = false;
                }

                if (!isValid) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Form Hatası',
                        html: errors.join('<br>'),
                        confirmButtonText: 'Tamam'
                    });
                    return;
                }

                Swal.fire({
                    title: 'Değişiklikleri Kaydet?',
                    text: 'Bilgisayar bilgileri güncellenecek.',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#198754',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Evet, Kaydet',
                    cancelButtonText: 'İptal'
                }).then(function(result) {
                    if (result.isConfirmed) {
                        submitBtn.innerHTML = 'Kaydediliyor...';
                        submitBtn.disabled = true;
                        form.submit();
                    }
                });
            });
        }
    }

    function resetForm() {
        var form = document.getElementById('computerEditForm');
        if (form) {
            Swal.fire({
                title: 'Formu Sıfırla?',
                text: 'Tüm değişiklikler kaybolacak.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#fd7e14',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Sıfırla',
                cancelButtonText: 'İptal'
            }).then(function(result) {
                if (result.isConfirmed) {
                    form.reset();
                    Swal.fire({
                        icon: 'success',
                        title: 'Form Sıfırlandı',
                        timer: 2000,
                        showConfirmButton: false,
                        toast: true,
                        position: 'top-end'
                    });
                }
            });
        }
    }

    document.addEventListener('DOMContentLoaded', initializeForm);
</script>

