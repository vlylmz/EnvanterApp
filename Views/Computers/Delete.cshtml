    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.3/sweetalert2.min.js"></script>
    <script>
        // Onay checkbox'ƒ± kontrol√º
        const confirmCheckbox = document.getElementById('confirmDelete');
        const deleteButton = document.getElementById('deleteButton');
        
        confirmCheckbox.addEventListener('change', function() {
            if (this.checked) {
                deleteButton.classList.add('enabled');
            } else {
                deleteButton.classList.remove('enabled');
            }
        });

        // Form g√∂nderim kontrol√º
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!confirmCheckbox.checked) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Onay Gerekli',
                    text: 'Silme i≈ülemini onaylamak i√ßin kutucuƒüu i≈üaretleyin.',
                    confirmButtonColor: '#e74c3c'
                });
                return;
            }

            // Son onay
            Swal.fire({
                title: 'SON UYARI!',
                html: `
                    <div style="text-align: center; padding: 1rem;">
                        <div style="font-size: 4rem; color: #e74c3c; margin-bottom: 1rem;">üíÄ</div>
                        <p style="font-size: 1.2rem; color: #e74c3c; font-weight: bold;">
                            <strong>@Model.Name</strong> bilgisayarƒ±nƒ± silmek √ºzeresiniz!
                        </p>
                        <p style="color: #7f8c8d; margin-top: 1rem;">
                            Bu i≈ülem <strong>GERƒ∞ ALINAMAZ</strong>. Emin misiniz?
                        </p>
                    </div>
                `,
                icon: 'error',
                showCancelButton: true,
                confirmButtonColor: '#e74c3c',
                cancelButtonColor: '#95a5a6',
                confirmButtonText: 'üíÄ EVET, Sƒ∞L!',
                cancelButtonText: 'üõ°Ô∏è HAYIR, VAZGE√á',
                reverseButtons: true,
                focusCancel: true,
                allowOutsideClick: false,
                allowEscapeKey: false
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme i≈ülemi animasyonu
                    Swal.fire({
                        title: 'Siliniyor...',
                        html: 'Bilgisayar kaydƒ± siliniyor, l√ºtfen bekleyin.',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Form'u ger√ßekten g√∂nder
                    setTimeout(() => {
                        this.submit();
                    }, 2000);
                }
            });
        });

        // Sayfa korumasƒ±
        window.addEventListener('beforeunload', function(e) {
            e.preventDefault();
            e.returnValue = 'Bu sayfadan ayrƒ±lmak istediƒüinizden emin misiniz?';
        });

        // Tehlikeli alan vurgusu
        setInterval(() => {
            const dangerElements = document.querySelectorAll('.danger-alert, .consequences-card');
            dangerElements.forEach(el => {
                el.style.animation = 'none';
                setTimeout(() => el.style.animation = 'pulse 2s ease-in-out', 10);
            });
        }, 10000);
    </script>
}