@model WebApplication1.ViewModels.ComputerDetailsViewModel

<h2>Bilgisayarı Düzenle</h2>

<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Adı</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Asset Tag</label>
        <input asp-for="AssetTag" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Durum</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label" asp-for="IsActive">Aktif mi?</label>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Computer/All" class="btn btn-secondary">İptal</a>
</form>