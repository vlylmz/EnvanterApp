@model List<WebApplication1.Models.Computer>

<div class="d-flex justify-content-between align-items-center mt-3 mb-2">
    <h2>Tüm Bilgisayarlar</h2>
    <a href="/Computer/Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i> Yeni Bilgisayar Ekle
    </a>
</div>
<div class="card p-3 mb-3">
    <form method="get" asp-action="All">
        <div class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Bilgisayar adı ara..." value="@ViewBag.SearchString" />
            </div>
            <div class="col-md-3">
                <select name="statusFilter" class="form-select">
                    <option value="">Tüm Durumlar</option>
                    <option value="aktif" selected="@((string)ViewBag.StatusFilter == "aktif")">Aktif</option>
                    <option value="pasif" selected="@((string)ViewBag.StatusFilter == "pasif")">Pasif</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtrele</button>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Aktif Mi?</th>
            @{
                string currentSort = ViewBag.CurrentSort as string ?? "";
                string nextSort = currentSort == "date_asc" ? "date_desc" : "date_asc";
                string sortIcon = currentSort == "date_asc" ? "fa-arrow-up" : (currentSort == "date_desc" ? "fa-arrow-down" : "fa-sort");
            }
            <th>
                <a href="?sort=@nextSort&searchString=@ViewBag.SearchString&statusFilter=@ViewBag.StatusFilter" class="text-decoration-none text-dark">
                    Oluşturulma Tarihi
                    <i class="fas @sortIcon ms-1"></i>
                </a>
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@(item.IsActive ? "Evet" : "Hayır")</td>
                <td>@item.PurchaseDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a href="/Computer/Detail/@item.Id" class="btn btn-sm btn-info me-1">Detay</a>
                    <a href="/Computer/Edit/@item.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>
                    <a href="/Computer/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage - 1)&searchString=@ViewBag.SearchString&statusFilter=@ViewBag.StatusFilter&sort=@ViewBag.CurrentSort">«</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&searchString=@ViewBag.SearchString&statusFilter=@ViewBag.StatusFilter&sort=@ViewBag.CurrentSort">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(currentPage + 1)&searchString=@ViewBag.SearchString&statusFilter=@ViewBag.StatusFilter&sort=@ViewBag.CurrentSort">»</a>
            </li>
        </ul>
    </nav>
}