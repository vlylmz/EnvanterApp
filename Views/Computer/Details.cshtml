    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex align-items-center">
                <div class="computer-icon">
                    <i class="fas fa-desktop"></i>
                </div>
                <div class="computer-info flex-grow-1">
                    <h1 id="computerName">Dell OptiPlex 7090</h1>
                    <div class="computer-meta">
                        <div class="meta-item">
                            <i class="fas fa-tag"></i>
                            <span id="assetTag">AST-2024-001</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-barcode"></i>
                            <span id="serialNumber">SN123456789</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-building"></i>
                            <span id="companyName">Tech Corp</span>
                        </div>
                        <div class="status-badge status-active" id="statusBadge">
                            <i class="fas fa-circle"></i>
                            <span>Aktif</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="action-buttons">
                <a href="/Computer/Edit/1" class="btn-action">
                    <i class="fas fa-edit"></i>
                    Düzenle
                </a>
                <button class="btn-action" onclick="changeStatus()">
                    <i class="fas fa-exchange-alt"></i>
                    Durum Değiştir
                </button>
                <button class="btn-action" onclick="assignUser()">
                    <i class="fas fa-user-plus"></i>
                    Kullanıcı Ata
                </button>
                <button class="btn-action" onclick="addMaintenance()">
                    <i class="fas fa-tools"></i>
                    Bakım Ekle
                </button>
                <div class="dropdown">
                    <button class="btn-action dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                        Daha Fazla
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="generateQR()"><i class="fas fa-qrcode me-2"></i>QR Kod</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportDetails()"><i class="fas fa-download me-2"></i>Export</a></li>
                        <li><a class="dropdown-item" href="#" onclick="printLabel()"><i class="fas fa-print me-2"></i>Etiket Yazdır</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#" onclick="deleteComputer()"><i class="fas fa-trash me-2"></i>Sil</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Details Container -->
        <div class="details-container">
            <!-- Main Content -->
            <div class="main-content">
                <!-- Detailed Specifications -->
                <div class="info-card tabs-container">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#specifications">
                                <i class="fas fa-microchip me-2"></i>Teknik Özellikler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#software">
                                <i class="fas fa-download me-2"></i>Yazılımlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#maintenance">
                                <i class="fas fa-tools me-2"></i>Bakım Geçmişi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#activity">
                                <i class="fas fa-history me-2"></i>Aktivite Geçmişi
                            </a>
                        </li>
                    </ul>
                    
                    <div class="tab-content">
                        <!-- Specifications Tab -->
                        <div class="tab-pane fade show active" id="specifications">
                            <div class="specs-grid">
                                <div class="spec-category">
                                    <h6 class="spec-category-title">
                                        <i class="fas fa-microchip text-primary"></i>
                                        İşlemci
                                    </h6>
                                    <div class="spec-item">
                                        <span class="spec-label">Model</span>
                                        <span class="spec-value">Intel Core i5-11400</span>
                                    </div>
                                    <div class="spec-item">
                                        <span class="spec-label">Çekirdek Sayısı</span>
                                        <span class="spec-value">6 Çekirdek</span>
                                    </div>
                                    <div class="spec-item">
                                        <span class="spec-label">Temel Hız</span>
                                        <span class="spec-value">2.6 GHz</span>
                                    </div>
                                    <div class="spec-item">
                                        <span class="spec-label">Turbo Hız</span>
                                        <span class="spec-value">4.4 GHz</span>
                                    </div>
                                </div>

                                <div class="spec-category">
                                    <h6 class="spec-category-title">
                                        <i class="fas fa-memory text-info"></i>
                                        Bellek
