                                    <div class="spec-item">
                                        <span class="spec-label">Toplam RAM</span>
                                        <span class="spec-value">16 GB</span>
                                    </div>
                                    <div class="spec-item">
                                        <span class="spec-label">RAM Tipi</span>
                                        <span class="spec-value">DDR4</span>
                                    </div>
                                    <div class="spec-item">
                                        <span class="spec-label">RAM Hızı</span>
                                        <span class="spec-value">3200 MHz</span>
                                    </div>
                                    <div class="spec-item">
                                        <span class="spec-label">Slot Sayısı</span>
                                        <span class="spec-value">4 Slot (2 Dolu)</span>
                                    </div>
                                </div>

                                <div class="spec-category">
